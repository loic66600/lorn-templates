<style>
  .nav.scrolled {
    background: rgba(10,10,10,0.97);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border);
  }

  .about-hero {
    padding: 120px 0 60px;
    background: var(--bg-alt);
    border-bottom: 1px solid var(--border);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--text-muted);
    margin-bottom: 20px;
  }

  .breadcrumb a:hover { color: var(--primary); }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 7vw, 6rem);
    text-transform: uppercase;
    letter-spacing: -0.03em;
    line-height: 0.9;
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .story-sub {
    font-size: 1.1rem;
    font-style: italic;
    color: var(--primary);
    margin: 16px 0 24px;
    line-height: 1.6;
  }

  .story-text {
    font-size: 1rem;
    color: var(--text-muted);
    line-height: 1.8;
    margin-bottom: 16px;
  }

  .story-cta {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    margin-top: 32px;
  }

  .img-frame {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .img-frame img {
    width: 100%;
    aspect-ratio: 4/5;
    object-fit: cover;
  }

  .img-badge {
    position: absolute;
    bottom: 20px;
    right: 20px;
    background: var(--primary);
    border-radius: var(--radius-md);
    padding: 12px 18px;
    text-align: center;
  }

  .img-badge strong {
    display: block;
    font-family: var(--font-display);
    font-size: 1.2rem;
    color: white;
  }

  .img-badge span {
    font-size: 12px;
    color: rgba(255,255,255,0.8);
  }

  .valeurs-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .valeur-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: 28px 24px;
    text-align: center;
    transition: border-color 0.2s, transform 0.2s;
  }

  .valeur-card:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
  }

  .valeur-icon {
    font-size: 2.5rem;
    margin-bottom: 16px;
  }

  .valeur-title {
    font-family: var(--font-display);
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin-bottom: 10px;
    color: var(--text);
  }

  .valeur-desc {
    font-size: 13px;
    color: var(--text-muted);
    line-height: 1.6;
  }

  @media (max-width: 1024px) {
    .valeurs-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .story-grid { grid-template-columns: 1fr; gap: 40px; }
    .valeurs-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 480px) {
    .valeurs-grid { grid-template-columns: 1fr; }
  }
</style>
