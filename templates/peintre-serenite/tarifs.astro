<style>
  .nav.scrolled { background: rgba(250,250,248,0.97); backdrop-filter: blur(20px); box-shadow: 0 1px 0 var(--border); }
  .page-header { padding: 120px 0 56px; background: var(--bg-alt); border-bottom: 1px solid var(--border); }
  .breadcrumb { display: flex; align-items: center; gap: 8px; font-size: 13px; color: var(--text-muted); margin-bottom: 18px; }
  .breadcrumb a:hover { color: var(--accent); }
  .page-title { font-family: var(--font-display); font-size: clamp(2.8rem,6vw,5rem); font-weight: 800; letter-spacing: -0.04em; line-height: 1; margin-bottom: 14px; }
  .page-desc { font-size: 1rem; color: var(--text-muted); max-width: 540px; line-height: 1.7; }

  .tarifs-wrapper { display: flex; flex-direction: column; gap: 0; margin-bottom: 40px; }

  .tarif-block { border-bottom: 1px solid var(--border); padding: 36px 0; }
  .tarif-block:first-child { border-top: 1px solid var(--border); }

  .tarif-block-header { display: flex; align-items: center; gap: 20px; margin-bottom: 24px; }

  .tarif-num {
    font-family: var(--font-display); font-size: 3rem; font-weight: 800;
    color: var(--border-strong); letter-spacing: -0.06em; line-height: 1; width: 64px; text-align: right;
  }

  .tarif-cat-title {
    font-family: var(--font-display); font-size: 1.3rem; font-weight: 800; letter-spacing: -0.02em;
  }

  .tarif-items { display: grid; grid-template-columns: repeat(2, 1fr); gap: 12px; padding-left: 84px; }

  .tarif-item {
    display: flex; align-items: center; justify-content: space-between;
    padding: 14px 20px; background: var(--bg-alt); border: 1px solid var(--border);
    border-radius: var(--radius-md); gap: 12px; transition: all 0.2s;
  }
  .tarif-item:hover { border-color: var(--accent); background: rgba(212,168,67,0.05); }

  .tarif-name { font-size: 14px; font-weight: 600; display: block; margin-bottom: 3px; font-family: var(--font-display); }
  .tarif-detail { font-size: 12px; color: var(--text-muted); display: block; }

  .tarif-price {
    font-family: var(--font-display); font-size: 1.1rem; font-weight: 800;
    color: var(--primary); white-space: nowrap; flex-shrink: 0;
  }

  .tarif-note {
    display: flex; align-items: flex-start; gap: 20px;
    background: rgba(27,43,75,0.04); border: 1px solid var(--border);
    border-left: 3px solid var(--accent); border-radius: var(--radius-md); padding: 24px;
    flex-wrap: wrap;
  }

  .tn-icon { font-size: 1.8rem; flex-shrink: 0; padding-top: 4px; }

  .tarif-note > div { flex: 1; min-width: 200px; }
  .tarif-note strong { font-family: var(--font-display); font-size: 1rem; font-weight: 800; display: block; margin-bottom: 8px; }
  .tarif-note p { font-size: 14px; color: var(--text-muted); line-height: 1.7; }

  .garanties-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; }

  .garantie-card {
    background: var(--bg-card); border: 1px solid var(--border); border-radius: var(--radius-md); padding: 28px;
    transition: border-color 0.2s;
  }
  .garantie-card:hover { border-color: var(--accent); }

  .garantie-icon { font-size: 2rem; display: block; margin-bottom: 14px; }
  .garantie-title { font-family: var(--font-display); font-size: 1rem; font-weight: 800; margin-bottom: 8px; }
  .garantie-desc { font-size: 13px; color: var(--text-muted); line-height: 1.7; }

  @media (max-width: 1024px) { .garanties-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 768px) {
    .tarif-items { grid-template-columns: 1fr; padding-left: 0; }
    .garanties-grid { grid-template-columns: 1fr; }
    .tarif-note { flex-direction: column; }
    .tarif-note a { align-self: flex-start; }
  }
</style>
