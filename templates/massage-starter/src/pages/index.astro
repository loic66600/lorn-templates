  youtube:'<svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2c.312-1.732.466-3.49.46-5.25a29 29 0 00-.46-5.33zM9.75 15.02V8.48l5.75 3.27-5.75 3.27z"/></svg>',
  twitter:'<svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>',
};
---

<Layout>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê FLOATING SOCIAL SIDEBAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  {socials.length > 0 && (
    <div class="social-float">
      {socials.map(([k,v]) => (
        <a href={v} target="_blank" rel="noopener" class="social-float-link" title={k} set:html={socialIcons[k] || k} />
      ))}
      <div class="social-float-line"></div>
    </div>
  )}

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <nav class="navbar" id="navbar">
    <div class="nav-inner">
      <a href="/" class="nav-logo">
        <img src={client.logo} alt={client.nom} class="nav-logo-img" onerror="this.style.display='none'" />
        <span class="nav-name font-display">{client.nom}</span>
      </a>
      <div class="nav-links">
        <a href="#prestations">Prestations</a>
        <a href="#apropos">√Ä propos</a>
        <a href="#avis">Avis</a>
        <a href="#contact">Contact</a>
        <a href="#rdv" class="nav-cta">Prendre RDV</a>
      </div>
      <button class="burger" id="burger" aria-label="Menu"><span></span><span></span><span></span></button>
    </div>
    <div class="nav-mobile" id="mobile-menu">
      <a href="#prestations">Prestations</a>
      <a href="#apropos">√Ä propos</a>
      <a href="#avis">Avis</a>
      <a href="#contact">Contact</a>
      <a href="#rdv" class="mob-cta">Prendre rendez-vous</a>
    </div>
  </nav>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê HERO ‚Äî Organic with blob shapes ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="hero" style={`--hero-bg:url('${client.heroImage}')`}>
    <div class="hero-bg-img"></div>
    <div class="hero-blob hero-blob-1 breathe"></div>
    <div class="hero-blob hero-blob-2 breathe" style="animation-delay:2s;"></div>
    <div class="container hero-grid">
      <div class="hero-text">
        <span class="hero-badge reveal">
          <span class="hero-badge-dot"></span> {client.metier} ‚Äî {client.ville}
        </span>
        <h1 class="font-display reveal reveal-d1">{client.nom}</h1>
        <p class="hero-sub reveal reveal-d2">{client.slogan}.</p>
        <div class="hero-actions reveal reveal-d3">
          <a href="#rdv" class="btn-violet btn-lg">Prendre rendez-vous ‚Üí</a>
          <a href="#prestations" class="btn-ghost">D√©couvrir les soins</a>
        </div>
        <div class="hero-infos reveal reveal-d4">
          <div class="hero-info-pill">üìç {client.ville}</div>
          <div class="hero-info-pill">üïê {client.horaires.split('|')[0].trim()}</div>
          <div class="hero-info-pill">üìû {client.telephone}</div>
        </div>
      </div>
      <div class="hero-visual">
        <div class="hero-img-wrap hero-img-animate">
          <img src="https://images.unsplash.com/photo-1695972235610-0c68661d537c?q=80&w=900&auto=format&fit=crop" alt="Massage bien-√™tre relaxation" loading="eager" />
        </div>
        <div class="hero-float float reveal reveal-d4">
          <span>üåø</span>
          <div><strong>100% Naturel</strong><small>Huiles bio & essentielles</small></div>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê PRESTATIONS ‚Äî Cards with image + badge prix/dur√©e ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="prestations">
    <div class="container">
      <div class="sec-head">
        <span class="sec-pill reveal">Nos soins</span>
        <h2 class="sec-title font-display reveal reveal-d1">Des moments<br><span class="text-violet">rien que pour vous</span></h2>
        <p class="sec-sub reveal reveal-d2">Chaque soin est adapt√© √† vos besoins. Prenez un instant, le reste suit.</p>
      </div>
      <div class="svc-grid">
        {client.services.map((s, i) => (
          <div class={`svc-card hover-lift reveal ${i > 0 ? `reveal-d${Math.min(i,4)}` : ''}`}>
            <div class="svc-img img-zoom">
              <img src={s.image} alt={s.titre} loading="lazy" />
              <div class="svc-badges">
                <span class="svc-badge svc-badge-prix">{s.prix}</span>
                <span class="svc-badge svc-badge-duree">‚è± {s.duree}</span>
              </div>
            </div>
            <div class="svc-body">
              <div class="svc-icon-row">
                <span class="svc-icon">{s.icone}</span>
                <h3 class="font-display">{s.titre}</h3>
              </div>
              <p>{s.description}</p>
              <a href="#rdv" class="svc-link">R√©server ce soin ‚Üí</a>
            </div>
          </div>
        ))}
        <div class="svc-card svc-card-deco hover-lift reveal reveal-d4">
          <img src={client.bannerImage} alt="Ambiance cabinet de massage" loading="lazy" class="svc-deco-img" />
          <div class="svc-deco-ov">
            <p class="font-display">Un moment<br><span>rien que pour vous</span></p>
            <a href="#rdv" class="btn-white" style="font-size:13px;padding:10px 22px;">R√©server ‚Üí</a>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê PARALLAX ‚Äî Citation zen ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="zen-banner">
    <div class="zen-bg ken-burns"><img src={client.bannerImage} alt="" loading="lazy" /></div>
    <div class="zen-ov"></div>
    <div class="container zen-ct">
      <blockquote class="font-display reveal">"Le corps a besoin de s'arr√™ter<br>pour que l'esprit puisse respirer."</blockquote>
      <a href="#rdv" class="btn-white btn-lg reveal reveal-d1">Offrez-vous ce moment ‚Üí</a>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê √Ä PROPOS ‚Äî Rounded image + text ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section" id="apropos">
    <div class="container about-grid">
      <div class="about-img-wrap slide-left">
        <img src={client.apropos.image} alt={client.apropos.imageAlt} loading="lazy" />
        <div class="about-badge font-display">
          <span>üßò‚Äç‚ôÄÔ∏è</span>
          <div><strong>{client.apropos.sousTitre}</strong></div>
        </div>
      </div>
      <div class="about-text slide-right">
        <span class="sec-pill">Qui suis-je</span>
        <h2 class="font-display" style="font-size:clamp(1.8rem,4vw,2.6rem);color:var(--text);line-height:1.12;margin:12px 0 20px;">{client.apropos.titre}</h2>
        <p>{client.apropos.texte}</p>
        <div class="about-valeurs">
          {client.apropos.valeurs.map((v, i) => (
            <div class={`about-valeur reveal ${i > 0 ? `reveal-d${i}` : ''}`}>
              <span class="av-icon">{v.icone}</span>
              <div>
                <strong>{v.titre}</strong>
                <small>{v.description}</small>
              </div>
            </div>
          ))}
        </div>
        {socials.length > 0 && (
          <div class="about-social">
            <span class="about-social-label">Suivez-moi</span>
            <div class="social-links">
              {socials.map(([k,v]) => (
                <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê R√âSEAUX SOCIAUX ‚Äî Dedicated section ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  {socials.length > 0 && (
    <section class="social-section section-alt">
      <div class="container social-section-inner">
        <div class="social-sec-text reveal">
          <h3 class="font-display">Retrouvez-moi sur les <span class="text-violet">r√©seaux</span></h3>
          <p>Conseils bien-√™tre, coulisses du cabinet, promotions exclusives.</p>
        </div>
        <div class="social-sec-links reveal reveal-d1">
          {socials.map(([k,v]) => (
            <a href={v} target="_blank" rel="noopener" class="social-big-link hover-lift" title={k}>
              <span class="sbl-icon" set:html={socialIcons[k] || k}></span>
              <span class="sbl-name">{k.charAt(0).toUpperCase() + k.slice(1)}</span>
              <span class="sbl-arrow">‚Üí</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê T√âMOIGNAGES ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section" id="avis">
    <div class="container">
      <div class="sec-head">
        <span class="sec-pill reveal">T√©moignages</span>
        <h2 class="sec-title font-display reveal reveal-d1">Ce qu'elles & ils <span class="text-violet">en disent</span></h2>
      </div>
      <div class="test-grid">
        {client.temoignages.map((t, i) => (
          <div class={`test-card hover-lift reveal ${i > 0 ? `reveal-d${i}` : ''}`}>
            <div class="test-stars">{Array.from({length:t.note}).map(()=><span>‚òÖ</span>)}</div>
            <blockquote class="font-display">"{t.texte}"</blockquote>
            <cite>‚Äî {t.nom}</cite>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê RENDEZ-VOUS + CONTACT ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="rdv">
    <div class="container">
      <div class="sec-head">
        <span class="sec-pill reveal">Rendez-vous</span>
        <h2 class="sec-title font-display reveal reveal-d1">R√©servez <span class="text-violet">votre soin</span></h2>
        <p class="sec-sub reveal reveal-d2">Remplissez le formulaire ci-dessous et je vous confirme votre cr√©neau sous 24h.</p>
      </div>

      <div class="rdv-grid" id="contact">
        <div class="rdv-form" id="rdvForm">
          <div class="f-row">
            <div class="fg"><label>Pr√©nom & Nom *</label><input type="text" id="rNom" placeholder="Votre nom" required /></div>
            <div class="fg"><label>T√©l√©phone *</label><input type="tel" id="rTel" placeholder="06 00 00 00 00" required /></div>
          </div>
          <div class="fg"><label>Email</label><input type="email" id="rEmail" placeholder="email@exemple.fr" /></div>
          <div class="f-row">
            <div class="fg"><label>Soin souhait√© *</label>
              <select id="rPresta" required>
                <option value="">Choisir un soin...</option>
                {client.services.map(s => <option value={s.titre}>{s.icone} {s.titre} ‚Äî {s.prix} ({s.duree})</option>)}
              </select>
            </div>
            <div class="fg"><label>Date souhait√©e *</label><input type="date" id="rDate" required /></div>
          </div>
          <div class="fg"><label>Message / Besoins particuliers</label>
            <textarea id="rMsg" rows="3" placeholder="Ex : J'ai des tensions dans le haut du dos, je cherche un soin cibl√©..."></textarea>
          </div>
          <button class="btn-violet btn-lg btn-full" id="rdvBtn" type="button">Envoyer ma demande</button>
          <p class="form-note">üåø Confirmation sous 24h ‚Äî Annulation gratuite 24h avant</p>
        </div>

        <div class="rdv-info">
          <div class="ri-card ri-card-accent">
            <h4>üìû Me contacter</h4>
            <a href={client.telephoneLink} class="ri-phone font-display">{client.telephone}</a>
            <a href={`mailto:${client.email}`}>{client.email}</a>
            <p style="margin-top:8px;font-size:12px;color:var(--text-light);">{client.horaires}</p>
          </div>
          <div class="ri-card">
            <h4>üìç Cabinet</h4>
            <p>{client.adresse}</p>
          </div>
          {client.googleMapsEmbed && (
            <div class="ri-card ri-map">
              <iframe src={client.googleMapsEmbed} width="100%" height="180" style="border:0;border-radius:16px;filter:saturate(0.7) contrast(1.05);" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          )}
          {socials.length > 0 && (
            <div class="ri-card">
              <h4>Suivez-moi</h4>
              <div class="social-links" style="margin-top:8px;">
                {socials.map(([k,v]) => (
                  <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
                ))}
              </div>
            </div>
          )}
        </div>

        <div class="rdv-ok" id="rdvSuccess" style="display:none;">
          <div style="font-size:52px;margin-bottom:12px;">üßò</div>
          <h3 class="font-display">Demande envoy√©e !</h3>
          <p>Je vous confirme votre rendez-vous sous 24 heures.</p>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div>
          <span class="footer-logo font-display">{client.nom}</span>
          <p class="footer-desc">{client.specialite}. {client.ville}.</p>
          {socials.length > 0 && (
            <div class="social-links" style="margin-top:16px;">
              {socials.map(([k,v]) => (
                <a href={v} target="_blank" rel="noopener" class="social-link social-link-dark" title={k} set:html={socialIcons[k] || k} />
              ))}
            </div>
          )}
        </div>
        <div>
          <h4>Navigation</h4>
          <a href="#prestations">Prestations</a>
          <a href="#apropos">√Ä propos</a>
          <a href="#avis">Avis</a>
          <a href="#rdv">Rendez-vous</a>
        </div>
        <div>
          <h4>Contact</h4>
          <a href={client.telephoneLink}>{client.telephone}</a>
          <a href={`mailto:${client.email}`}>{client.email}</a>
          <span class="footer-addr">{client.adresse}</span>
        </div>
        <div>
          <h4>L√©gal</h4>
          <a href="/mentions-legales">Mentions l√©gales</a>
          <a href="https://vitemonsite-artisan.fr" target="_blank" rel="noopener" class="footer-badge">Site par <strong>LORN Digital Studio</strong></a>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2026 {client.nom} ‚Äî {client.ville}</p>
      </div>
    </div>
  </footer>

</Layout>


<script define:vars={{ web3Key }}>
  const btn=document.getElementById('rdvBtn'),form=document.getElementById('rdvForm'),ok=document.getElementById('rdvSuccess');
  btn?.addEventListener('click',async()=>{
    const nom=document.getElementById('rNom')?.value,tel=document.getElementById('rTel')?.value,
      email=document.getElementById('rEmail')?.value,presta=document.getElementById('rPresta')?.value,
      date=document.getElementById('rDate')?.value,msg=document.getElementById('rMsg')?.value;
    if(!nom||!tel||!presta||!date){alert('Merci de remplir les champs obligatoires.');return;}
    btn.disabled=true;btn.textContent='Envoi...';
    if(web3Key){try{
      const r=await fetch('https://api.web3forms.com/submit',{method:'POST',headers:{'Content-Type':'application/json'},
        body:JSON.stringify({access_key:web3Key,subject:'üßò RDV Massage ‚Äî '+nom+' ‚Äî '+presta,from_name:nom,telephone:tel,email,prestation:presta,date,message:msg})});
      const d=await r.json();if(d.success&&form&&ok){form.style.display='none';ok.style.display='block';return;}
    }catch(e){}}
    window.location.href='mailto:lorn.digital.studio@gmail.com?subject='+encodeURIComponent('RDV Massage ‚Äî '+presta+' ‚Äî '+date)+
      '&body='+encodeURIComponent('Nom: '+nom+'\nT√©l: '+tel+'\nSoin: '+presta+'\nDate: '+date+'\n\n'+msg);
  });
</script>


<style>
  /* ‚ïê‚ïê‚ïê FLOATING SOCIAL SIDEBAR ‚ïê‚ïê‚ïê */
  .social-float{position:fixed;right:20px;top:50%;transform:translateY(-50%);z-index:90;display:flex;flex-direction:column;align-items:center;gap:8px;}
  .social-float-link{display:flex;align-items:center;justify-content:center;width:44px;height:44px;border-radius:14px;background:var(--bg-card);border:1px solid var(--border-strong);color:var(--violet);box-shadow:0 4px 20px rgba(124,58,237,0.06);transition:all 0.4s cubic-bezier(0.16,1,0.3,1);}
  .social-float-link:hover{background:var(--violet);color:#fff;border-color:var(--violet);transform:scale(1.12);box-shadow:0 8px 28px rgba(124,58,237,0.25);}
  .social-float-line{width:1px;height:40px;background:linear-gradient(var(--violet-pale),transparent);margin-top:4px;}
  @media(max-width:768px){.social-float{display:none;}}

  /* ‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê */
  .navbar{position:fixed;top:0;left:0;right:0;z-index:100;padding:12px clamp(0.75rem,3vw,2rem);transition:padding 0.4s;}
  .navbar.scrolled{padding-top:6px;padding-bottom:6px;}
  .nav-inner{max-width:1080px;margin:0 auto;padding:10px 20px;border-radius:var(--radius-round);background:rgba(250,249,254,0.92);backdrop-filter:blur(24px);-webkit-backdrop-filter:blur(24px);border:1px solid var(--border);box-shadow:0 1px 3px rgba(124,58,237,0.02),0 8px 28px rgba(124,58,237,0.04);display:flex;align-items:center;justify-content:space-between;gap:8px;transition:all 0.4s;}
  .navbar.scrolled .nav-inner{padding:7px 16px;}
  .nav-logo{display:flex;align-items:center;gap:8px;}
  .nav-logo-img{width:36px;height:36px;border-radius:10px;object-fit:contain;}
  .nav-name{font-size:19px;font-weight:600;color:var(--text);font-style:italic;}
  .nav-links{display:flex;gap:2px;align-items:center;}
  .nav-links a{font-size:13px;font-weight:500;color:var(--text-muted);padding:8px 14px;border-radius:var(--radius-round);transition:all 0.3s;white-space:nowrap;}
  .nav-links a:hover{color:var(--violet);background:var(--violet-glow);}
  .nav-cta{padding:9px 22px!important;background:var(--violet)!important;color:#fff!important;font-weight:600!important;font-size:12px!important;}
  .nav-cta:hover{background:var(--violet-dark)!important;transform:translateY(-1px);}
  .burger{display:none;background:none;border:none;cursor:pointer;padding:8px;flex-direction:column;gap:5px;}
  .burger span{width:20px;height:2px;background:var(--violet);border-radius:2px;display:block;transition:all 0.3s;}
  .burger.open span:nth-child(1){transform:rotate(45deg) translateY(7px);} .burger.open span:nth-child(2){opacity:0;} .burger.open span:nth-child(3){transform:rotate(-45deg) translateY(-7px);}
