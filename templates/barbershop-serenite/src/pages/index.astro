---
import Layout from '../layouts/Layout.astro';
import { client } from '../data/client';
const web3Key = import.meta.env.PUBLIC_WEB3FORMS_KEY || '';
const socials = Object.entries(client.reseaux).filter(([_,v]) => v);
const socialIcons: Record<string,string> = {
  facebook:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>',
  instagram:'<svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>',
  tiktok:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 006.34 6.34 6.34 6.34 0 006.34-6.34V8.73a8.19 8.19 0 004.76 1.52V6.83a4.84 4.84 0 01-1-.14z"/></svg>',
  linkedin:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-4 0v7h-4v-7a6 6 0 016-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>',
  youtube:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2c.312-1.732.466-3.49.46-5.25a29 29 0 00-.46-5.33zM9.75 15.02V8.48l5.75 3.27-5.75 3.27z"/></svg>',
  twitter:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>',
};
---

<Layout>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <nav class="navbar" id="navbar">
    <div class="nav-inner">
      <a href="/" class="nav-logo">
        <img src={client.logo} alt={client.nom} class="nav-logo-img" onerror="this.style.display='none'" />
        <span class="nav-name font-display">{client.nom}</span>
      </a>
      <div class="nav-links">
        <a href="/#tarifs">Tarifs</a>
        <a href="/galerie">Galerie</a>
        <a href="/a-propos">L'histoire</a>
        <a href="/#equipe">L'√©quipe</a>
        <a href="/#rdv" class="nav-cta">Prendre RDV</a>
      </div>
      <button class="burger" id="burger" aria-label="Menu"><span></span><span></span><span></span></button>
    </div>
    <div class="nav-mobile" id="mobile-menu">
      <a href="/#tarifs">Tarifs</a>
      <a href="/galerie">Galerie</a>
      <a href="/a-propos">L'histoire</a>
      <a href="/#equipe">L'√©quipe</a>
      <a href="/#avis">Avis</a>
      <a href="/#rdv" class="mob-cta">Prendre rendez-vous</a>
    </div>
  </nav>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê HERO ‚Äî Full-width with gold accent stripe ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="hero">
    <div class="hero-bg ken-burns"><img src={client.heroImage} alt={client.heroImageAlt} loading="eager" /></div>
    <div class="hero-overlay"></div>
    <div class="hero-gold-stripe"></div>
    <div class="container hero-content">
      <div class="hero-left">
        <span class="hero-tag reveal font-display">üíà {client.metier} ‚Äî {client.ville}</span>
        <h1 class="font-display reveal reveal-d1">
          <span class="shimmer">{client.nom.split(' ').slice(0, -1).join(' ')}</span><br>{client.nom.split(' ').slice(-1)}
        </h1>
        <p class="hero-sub reveal reveal-d2">{client.slogan}.</p>
        <div class="hero-actions reveal reveal-d3">
          <a href="#rdv" class="btn-gold btn-lg">Prendre rendez-vous</a>
          <a href="#tarifs" class="btn-ghost">Voir les tarifs ‚Üì</a>
        </div>
        <div class="hero-hours reveal reveal-d4">
          <span>{client.horaires}</span>
          <span class="hero-hours-closed">{client.horairesFerme}</span>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê √âQUIPE ‚Äî Horizontal barber cards ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section" id="equipe">
    <div class="container">
      <div class="sec-head">
        <span class="sec-label font-display reveal">L'√©quipe</span>
        <h2 class="sec-title font-display reveal reveal-d1">NOS <span class="text-gold">BARBIERS</span></h2>
      </div>
      <div class="team-grid">
        {client.equipe.map((b, i) => (
          <div class={`team-card hover-lift reveal ${i > 0 ? `reveal-d${i}` : ''}`}>
            <div class="team-img img-zoom">
              <img src={b.image} alt={b.prenom} loading="lazy" />
            </div>
            <div class="team-info">
              <h3 class="font-display">{b.prenom}</h3>
              <span class="team-role">{b.role}</span>
              <div class="team-details">
                <span>‚è± {b.experience}</span>
                <span>‚úÇÔ∏è {b.specialite}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê TARIFS ‚Äî Price list menu board style ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="tarifs">
    <div class="container">
      <div class="sec-head">
        <span class="sec-label font-display reveal">Services & Prix</span>
        <h2 class="sec-title font-display reveal reveal-d1">NOS <span class="text-gold">PRESTATIONS</span></h2>
      </div>
      <div class="price-board">
        {client.services.map((s, i) => (
          <div class={`price-row reveal ${i > 0 ? `reveal-d${Math.min(i,5)}` : ''}`}>
            <div class="price-left">
              <span class="price-icon">{s.icone}</span>
              <div>
                <div class="price-name-row">
                  <h3>{s.titre}</h3>
                  {s.populaire && <span class="price-pop">Populaire</span>}
                </div>
                <p>{s.description}</p>
              </div>
            </div>
            <div class="price-dots"></div>
            <div class="price-right">
              <span class="price-amount font-display">{s.prix}</span>
              <small>{s.duree}</small>
            </div>
          </div>
        ))}
      </div>
      <div class="price-note reveal">
        <p>Les prix incluent le shampoing et les produits de finition. Paiement CB accept√©.</p>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê PARALLAX BANNER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="par-banner">
    <div class="par-bg ken-burns"><img src={client.bannerImage} alt="" loading="lazy" /></div>
    <div class="par-ov gradient-shift"></div>
    <div class="container par-ct">
      <h2 class="font-display reveal"><span class="shimmer">SHARP CUTS.</span><br>CLEAN LINES.<br>GOOD VIBES.</h2>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê GALERIE ‚Äî Horizontal scroll strip ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section" id="galerie-apercu">
    <div class="container">
      <div class="sec-head-row">
        <div>
          <span class="sec-label font-display reveal">Portfolio</span>
          <h2 class="sec-title font-display reveal reveal-d1">NOS <span class="text-gold">COUPES</span></h2>
        </div>
        <a href="/galerie" class="btn-outline-gold reveal">Voir tout ‚Üí</a>
      </div>
    </div>
    <div class="gal-strip reveal">
      {client.galerie.map((g) => (
        <div class="gal-strip-item img-zoom">
          <img src={g.image} alt={g.alt} loading="lazy" />
          <div class="gal-strip-cap"><span>{g.alt}</span></div>
        </div>
      ))}
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê T√âMOIGNAGES ‚Äî Stacked large quotes ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="avis">
    <div class="container">
      <div class="sec-head">
        <span class="sec-label font-display reveal">Avis clients</span>
        <h2 class="sec-title font-display reveal reveal-d1">ILS <span class="text-gold">VALIDENT</span></h2>
      </div>
      <div class="test-stack">
        {client.temoignages.map((t, i) => (
          <div class={`test-item reveal ${i > 0 ? `reveal-d${i}` : ''}`}>
            <div class="test-stars">{Array.from({length:t.note}).map(()=><span>‚òÖ</span>)}</div>
            <blockquote>"{t.texte}"</blockquote>
            <cite>‚Äî {t.nom}</cite>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê RENDEZ-VOUS + CONTACT ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section" id="rdv">
    <div class="container">
      <div class="sec-head">
        <span class="sec-label font-display reveal">Contact</span>
        <h2 class="sec-title font-display reveal reveal-d1">PRENDRE <span class="text-gold">RENDEZ-VOUS</span></h2>
      </div>

      <div class="rdv-grid">
        <!-- Formulaire / Lien externe -->
        <div class="rdv-form slide-left">
          {client.lienReservation ? (
            <div style="text-align:center;padding:40px 0;">
              <p style="color:var(--text-muted);font-size:15px;margin-bottom:20px;">R√©servez en ligne via notre partenaire :</p>
              <a href={client.lienReservation} target="_blank" rel="noopener" class="btn-gold btn-lg">R√©server sur Planity ‚Üí</a>
            </div>
          ) : (
            <div id="rdvForm">
              <div class="f-row">
                <div class="fg"><label>Nom *</label><input type="text" id="rNom" placeholder="Votre nom" required /></div>
                <div class="fg"><label>T√©l√©phone *</label><input type="tel" id="rTel" placeholder="06 00 00 00 00" required /></div>
              </div>
              <div class="f-row">
                <div class="fg"><label>Prestation *</label>
                  <select id="rPresta" required>
                    <option value="">Choisir...</option>
                    {client.services.map(s => <option value={s.titre}>{s.icone} {s.titre} ‚Äî {s.prix}</option>)}
                  </select>
                </div>
                <div class="fg"><label>Barbier pr√©f√©r√©</label>
                  <select id="rBarbier">
                    <option value="">Pas de pr√©f√©rence</option>
                    {client.equipe.map(b => <option value={b.prenom}>{b.prenom}</option>)}
                  </select>
                </div>
              </div>
              <div class="f-row">
                <div class="fg"><label>Date souhait√©e *</label><input type="date" id="rDate" required /></div>
                <div class="fg"><label>Cr√©neau *</label>
                  <select id="rHeure" required>
                    <option value="">Choisir...</option>
                    <option>9h</option><option>9h30</option><option>10h</option><option>10h30</option><option>11h</option><option>11h30</option>
                    <option>14h</option><option>14h30</option><option>15h</option><option>15h30</option><option>16h</option><option>16h30</option><option>17h</option><option>17h30</option><option>18h</option>
                  </select>
                </div>
              </div>
              <div class="fg"><label>Note</label><textarea id="rMsg" rows="2" placeholder="Demande particuli√®re..."></textarea></div>
              <button class="btn-gold btn-lg btn-full" id="rdvBtn" type="button">Confirmer mon rendez-vous</button>
              <p class="form-note">Confirmation par SMS sous 1h ‚Äî Annulation gratuite 24h avant</p>
            </div>
          )}

          <div id="rdvSuccess" style="display:none;text-align:center;padding:40px 0;">
            <div style="font-size:48px;margin-bottom:12px;">üíà</div>
            <h3 style="color:var(--gold-light);font-size:22px;font-weight:700;margin-bottom:8px;">Rendez-vous demand√© !</h3>
            <p style="color:var(--text-muted);font-size:15px;">Confirmation par SMS sous 1 heure.</p>
          </div>
        </div>

        <!-- Infos contact -->
        <div class="rdv-info slide-right">
          <div class="info-card">
            <h4>üìç Nous trouver</h4>
            <p class="info-addr">{client.adresse}</p>
            {client.googleMapsEmbed && (
              <iframe src={client.googleMapsEmbed} width="100%" height="180" style="border:0;border-radius:10px;margin-top:12px;filter:invert(0.92) hue-rotate(180deg) brightness(1.1) contrast(0.9);" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            )}
          </div>
          <div class="info-card">
            <h4>üïê Horaires</h4>
            <div class="info-hours">
              {client.horairesSemaine.map(h => (
                <div class={`info-h-row ${h.ferme ? 'closed' : ''}`}>
                  <span>{h.jour}</span><span>{h.heures}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="info-card">
            <h4>üìû Contact</h4>
            <a href={client.telephoneLink} class="info-phone">{client.telephone}</a>
            <a href={`mailto:${client.email}`} style="font-size:14px;color:var(--text-muted);display:block;margin-top:4px;">{client.email}</a>
            {socials.length > 0 && (
              <div class="social-links" style="margin-top:12px;">
                {socials.map(([k,v]) => (
                  <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
                ))}
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div>
          <span class="footer-logo font-display shimmer">{client.nom}</span>
          <p class="footer-desc">{client.specialite}. {client.ville}.</p>
          {socials.length > 0 && (
            <div class="social-links" style="margin-top:14px;">
              {socials.map(([k,v]) => (
                <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
              ))}
            </div>
          )}
        </div>
        <div>
          <h4 class="font-display">NAVIGATION</h4>
          <a href="/">Accueil</a><a href="/#tarifs">Tarifs</a><a href="/galerie">Galerie</a>
          <a href="/a-propos">L'histoire</a><a href="/#rdv">Rendez-vous</a>
        </div>
        <div>
          <h4 class="font-display">INFOS</h4>
          <a href={client.telephoneLink}>{client.telephone}</a>
          <a href={`mailto:${client.email}`}>{client.email}</a>
          <span class="footer-addr">{client.adresse}</span>
          <a href="/mentions-legales">Mentions l√©gales</a>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2026 {client.nom}</p>
        <a href="https://vitemonsite-artisan.fr" target="_blank" rel="noopener" class="footer-badge">Site par <strong>LORN Digital Studio</strong></a>
      </div>
    </div>
  </footer>

</Layout>


<script define:vars={{ web3Key }}>
  const btn=document.getElementById('rdvBtn'),form=document.getElementById('rdvForm'),ok=document.getElementById('rdvSuccess');
  btn?.addEventListener('click',async()=>{
    const nom=document.getElementById('rNom')?.value,tel=document.getElementById('rTel')?.value,
      presta=document.getElementById('rPresta')?.value,barbier=document.getElementById('rBarbier')?.value,
      date=document.getElementById('rDate')?.value,heure=document.getElementById('rHeure')?.value,
      msg=document.getElementById('rMsg')?.value;
    if(!nom||!tel||!presta||!date||!heure){alert('Remplissez les champs obligatoires.');return;}
    btn.disabled=true;btn.textContent='Envoi...';
    if(web3Key){try{
      const r=await fetch('https://api.web3forms.com/submit',{method:'POST',headers:{'Content-Type':'application/json'},
        body:JSON.stringify({access_key:web3Key,subject:'üíà RDV Barbershop ‚Äî '+nom+' ‚Äî '+presta,from_name:nom,telephone:tel,prestation:presta,barbier,date,heure,message:msg})});
      const d=await r.json();if(d.success&&form&&ok){form.style.display='none';ok.style.display='block';return;}
    }catch(e){}}
    window.location.href='mailto:lorn.digital.studio@gmail.com?subject='+encodeURIComponent('RDV Barbershop ‚Äî '+date+' '+heure)+
      '&body='+encodeURIComponent('Nom: '+nom+'\nT√©l: '+tel+'\nPrestation: '+presta+'\nBarbier: '+barbier+'\nDate: '+date+'\nHeure: '+heure+'\n\n'+msg);
  });
</script>


<style>
  /* ‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê */
  .navbar{position:fixed;top:0;left:0;right:0;z-index:100;padding:10px clamp(0.75rem,3vw,2rem);transition:padding 0.4s;}
  .navbar.scrolled{padding-top:5px;padding-bottom:5px;}
  .nav-inner{max-width:1100px;margin:0 auto;padding:10px 18px;border-radius:14px;background:rgba(10,10,10,0.88);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);border:1px solid var(--border);box-shadow:0 4px 24px rgba(0,0,0,0.3);display:flex;align-items:center;justify-content:space-between;gap:8px;transition:all 0.4s;}
  .navbar.scrolled .nav-inner{padding:7px 14px;}
  .nav-logo{display:flex;align-items:center;gap:8px;}
  .nav-logo-img{width:36px;height:36px;border-radius:8px;object-fit:contain;}
  .nav-name{font-size:18px;color:var(--gold-light);}
  .nav-links{display:flex;gap:2px;align-items:center;}
  .nav-links a{font-size:13px;font-weight:500;color:var(--text-muted);padding:7px 12px;border-radius:8px;transition:all 0.3s;white-space:nowrap;}
  .nav-links a:hover{color:var(--gold-light);}
  .nav-cta{padding:8px 18px!important;border-radius:10px!important;background:var(--gold)!important;color:#000!important;font-weight:700!important;font-size:12px!important;transition:all 0.3s!important;}
  .nav-cta:hover{background:var(--gold-light)!important;transform:translateY(-1px);}
  .burger{display:none;background:none;border:none;cursor:pointer;padding:8px;flex-direction:column;gap:5px;}
  .burger span{width:20px;height:2px;background:var(--gold-light);border-radius:2px;display:block;transition:all 0.3s;}
  .burger.open span:nth-child(1){transform:rotate(45deg) translateY(7px);} .burger.open span:nth-child(2){opacity:0;} .burger.open span:nth-child(3){transform:rotate(-45deg) translateY(-7px);}
  .nav-mobile{display:none;max-width:1100px;margin:6px auto 0;padding:12px;border-radius:14px;background:rgba(10,10,10,0.95);backdrop-filter:blur(20px);border:1px solid var(--border);flex-direction:column;gap:2px;}
  .nav-mobile.open{display:flex;}
  .nav-mobile a{padding:12px 14px;border-radius:10px;font-size:15px;color:var(--text);font-weight:500;}
  .mob-cta{margin-top:6px;padding:13px!important;border-radius:10px;background:var(--gold);color:#000!important;text-align:center;font-weight:700!important;}
  @media(max-width:768px){.nav-links{display:none!important;}.burger{display:flex!important;}}

  /* ‚ïê‚ïê‚ïê HERO ‚Äî Gold stripe accent ‚ïê‚ïê‚ïê */
  .hero{position:relative;min-height:100vh;display:flex;align-items:center;overflow:hidden;}
  .hero-bg{position:absolute;inset:0;z-index:0;} .hero-bg img{width:100%;height:100%;object-fit:cover;}
  .hero-overlay{position:absolute;inset:0;z-index:1;background:linear-gradient(90deg,rgba(10,10,10,0.92) 0%,rgba(10,10,10,0.7) 50%,rgba(10,10,10,0.4) 100%);}
  .hero-gold-stripe{position:absolute;top:0;left:0;bottom:0;width:5px;z-index:3;background:linear-gradient(180deg,transparent,var(--gold-light),var(--gold),transparent);}
  .hero-content{position:relative;z-index:2;width:100%;padding-top:120px;padding-bottom:60px;}
  .hero-left{max-width:600px;}
  .hero-tag{display:inline-block;font-size:14px;color:var(--gold-light);margin-bottom:16px;}
  .hero h1{font-size:clamp(3.5rem,9vw,6rem);line-height:0.95;color:var(--white);margin-bottom:16px;}
  .hero-sub{font-size:16px;color:var(--text-muted);line-height:1.7;max-width:420px;}
  .hero-actions{display:flex;gap:14px;margin-top:28px;flex-wrap:wrap;}
  .hero-hours{margin-top:32px;padding-top:20px;border-top:1px solid var(--border);display:flex;gap:16px;font-size:13px;color:var(--text-muted);}
