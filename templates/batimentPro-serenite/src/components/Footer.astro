<style>
  .footer { background:#0F1629;color:#9BA3BE;padding:60px 0 30px; }
  .footer-grid { display:grid;grid-template-columns:1.5fr 1fr 1fr 1fr;gap:40px;margin-bottom:40px; }
  .footer-brand p { font-size:14px;line-height:1.7;margin-top:12px;max-width:280px; }
  .footer-logo { display:flex;align-items:center;gap:8px;color:#E8E8ED;font-family:'Syne',sans-serif;font-weight:700;font-size:16px; }
  .footer-logo-icon { width:32px;height:32px;border-radius:10px;background:linear-gradient(135deg,var(--primary),var(--primary-dark));display:flex;align-items:center;justify-content:center;color:#fff; }
  .footer-col h4 { font-family:'Syne',sans-serif;font-size:14px;font-weight:700;color:#E8E8ED;margin-bottom:14px;letter-spacing:0.03em; }
  .footer-col a { display:block;font-size:14px;color:#6B7394;margin-bottom:8px;transition:color 0.3s; }
  .footer-col a:hover { color:var(--primary); }
  .footer-addr { font-size:14px;color:#6B7394;margin-top:4px; }
  .footer-bottom { display:flex;justify-content:space-between;align-items:center;padding-top:24px;border-top:1px solid rgba(255,255,255,0.06); }
  .footer-bottom p { font-size:13px;color:#4A5068; }
  .footer-badge { display:inline-flex;align-items:center;gap:6px;font-size:12px;color:#4A5068;transition:color 0.3s; }
  .footer-badge:hover { color:var(--primary); }
  @media(max-width:768px){
    .footer-grid{grid-template-columns:1fr 1fr;gap:30px;}
    .footer-bottom{flex-direction:column;gap:12px;text-align:center;}
  }
  @media(max-width:480px){ .footer-grid{grid-template-columns:1fr;} }
</style>
