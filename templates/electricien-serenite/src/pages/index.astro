---
import Layout from '../layouts/Layout.astro';
import { client } from '../data/client';
const web3Key = import.meta.env.PUBLIC_WEB3FORMS_KEY || '';
const socials = Object.entries(client.reseaux).filter(([_,v]) => v);
const socialIcons: Record<string,string> = {
  facebook:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>',
  instagram:'<svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>',
  linkedin:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-4 0v7h-4v-7a6 6 0 016-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>',
  tiktok:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 006.34 6.34 6.34 6.34 0 006.34-6.34V8.73a8.19 8.19 0 004.76 1.52V6.83a4.84 4.84 0 01-1-.14z"/></svg>',
  youtube:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2c.312-1.732.466-3.49.46-5.25a29 29 0 00-.46-5.33zM9.75 15.02V8.48l5.75 3.27-5.75 3.27z"/></svg>',
  twitter:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>',
};
---

<Layout>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê URGENCE BANNER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- D√âSACTIVABLE : Mettre urgence: false dans client.ts -->
  {client.urgence && (
    <div class="urgence-bar">
      <div class="container urgence-inner">
        <div class="urgence-pulse"></div>
        <span class="urgence-text">‚ö° {client.urgenceTexte}</span>
        <a href={client.telephoneLink} class="urgence-phone font-mono">{client.telephone}</a>
      </div>
    </div>
  )}

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <nav class="navbar" id="navbar" style={client.urgence ? 'top:44px;' : ''}>
    <div class="nav-inner">
      <a href="/" class="nav-logo">
        <img src={client.logo} alt={client.nom} class="nav-logo-img" onerror="this.style.display='none'" />
        <span class="nav-name">{client.nom}</span>
      </a>
      <div class="nav-links">
        <a href="/#services">Services</a>
        <a href="/realisations">R√©alisations</a>
        <a href="/a-propos">√Ä propos</a>
        <a href="/tarifs">Tarifs</a>
        <a href="/zone">Zone</a>
        <a href="/#devis" class="nav-cta">Devis gratuit</a>
      </div>
      <button class="burger" id="burger" aria-label="Menu"><span></span><span></span><span></span></button>
    </div>
    <div class="nav-mobile" id="mobile-menu">
      <a href="/#services">Services</a>
      <a href="/realisations">R√©alisations</a>
      <a href="/a-propos">√Ä propos</a>
      <a href="/tarifs">Tarifs</a>
      <a href="/zone">Zone</a>
      <a href="/#devis" class="mob-cta">Demander un devis</a>
    </div>
  </nav>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê HERO ‚Äî Diagonal clip with grid overlay ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="hero">
    <div class="hero-bg ken-burns"><img src={client.heroImage} alt={client.heroImageAlt} loading="eager" /></div>
    <div class="hero-overlay"></div>
    <div class="hero-grid-lines"></div>
    <div class="container hero-content">
      <span class="hero-tag reveal font-mono">‚ö° {client.metier} ‚Äî {client.ville} ‚Äî {client.rayonKm}</span>
      <h1 class="reveal reveal-d1">
        Votre √©lectricien<br>de <span class="text-blue">confiance</span>
      </h1>
      <p class="hero-sub reveal reveal-d2">{client.slogan}.</p>
      <div class="hero-actions reveal reveal-d3">
        <a href="#devis" class="btn-blue btn-lg">Devis gratuit sous 24h ‚Üí</a>
        <a href={client.telephoneLink} class="btn-ghost font-mono">{client.telephone}</a>
      </div>
    </div>
    <div class="hero-diag"></div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê STATS TICKER BAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="stats-bar">
    <div class="container stats-inner">
      {client.stats.map((s) => (
        <div class="stat-item reveal">
          <span class="stat-num font-mono" data-count={s.chiffre} data-suffix={s.suffix}></span>
          <span class="stat-label">{s.label}</span>
        </div>
      ))}
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê GARANTIES ‚Äî Inline badges ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="gar-section">
    <div class="container gar-row">
      {client.garanties.map((g, i) => (
        <div class={`gar-badge hover-lift reveal ${i > 0 ? `reveal-d${i}` : ''}`}>
          <span>{g.icone}</span>
          <div><strong>{g.titre}</strong><small>{g.description}</small></div>
        </div>
      ))}
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê SERVICES ‚Äî Cards with detail chips ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="services">
    <div class="container">
      <div class="sec-head">
        <span class="sec-tag reveal font-mono">// NOS SERVICES</span>
        <h2 class="sec-title reveal reveal-d1">Expertise <span class="text-blue">√©lectrique</span> compl√®te</h2>
      </div>
      <div class="svc-grid">
        {client.services.map((s, i) => (
          <div class={`svc-card hover-lift reveal ${i < 3 ? `reveal-d${i+1}` : ''}`}>
            <div class="svc-img img-zoom">
              <img src={s.image} alt={s.titre} loading="lazy" />
              {s.urgence && <span class="svc-urg">‚ö° Urgence 7j/7</span>}
            </div>
            <div class="svc-body">
              <div class="svc-top">
                <span class="svc-icon">{s.icone}</span>
                <h3>{s.titre}</h3>
              </div>
              <p>{s.description}</p>
              <div class="svc-chips">
                {s.details.map(d => <span class="svc-chip font-mono">{d}</span>)}
              </div>
              <a href="#devis" class="svc-link">Demander un devis ‚Üí</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê PARALLAX BANNER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="par-banner">
    <div class="par-bg ken-burns"><img src={client.bannerImage} alt="" loading="lazy" /></div>
    <div class="par-ov gradient-shift"></div>
    <div class="container par-ct">
      <h2 class="reveal">Panne √©lectrique ?<br><span class="text-blue">On intervient en ‚Äì de 45 min.</span></h2>
      <div class="par-actions reveal reveal-d1">
        <a href={client.telephoneLink} class="btn-blue btn-lg font-mono">üìû {client.telephone}</a>
        <a href="#devis" class="btn-ghost">Ou demandez un devis ‚Üí</a>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê R√âALISATIONS APER√áU ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section">
    <div class="container">
      <div class="sec-head-row">
        <div>
          <span class="sec-tag reveal font-mono">// R√âALISATIONS</span>
          <h2 class="sec-title reveal reveal-d1">Nos derni√®res <span class="text-blue">interventions</span></h2>
        </div>
        <a href="/realisations" class="btn-outline-blue reveal">Voir tout ‚Üí</a>
      </div>
      <div class="real-grid">
        {client.realisations.slice(0,4).map((r, i) => (
          <div class={`real-card blur-sharp ${i === 0 ? 'real-wide' : ''}`}>
            <div class="img-zoom"><img src={r.image} alt={r.alt} loading="lazy" /></div>
            <div class="real-cap">
              <span class="real-cat font-mono">{r.categorie}</span>
              <span>{r.alt}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê T√âMOIGNAGES ‚Äî Alternating left/right ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="avis">
    <div class="container">
      <div class="sec-head">
        <span class="sec-tag reveal font-mono">// T√âMOIGNAGES</span>
        <h2 class="sec-title reveal reveal-d1">La parole √† <span class="text-blue">nos clients</span></h2>
      </div>
      <div class="test-alt">
        {client.temoignages.map((t, i) => (
          <div class={`test-row ${i % 2 === 1 ? 'test-right' : ''} reveal ${i > 0 ? `reveal-d${Math.min(i,3)}` : ''}`}>
            <div class="test-card-alt hover-lift">
              <div class="test-top">
                <div class="test-stars">{Array.from({length:t.note}).map(()=><span>‚òÖ</span>)}</div>
                <span class="test-type font-mono">{t.type}</span>
              </div>
              <blockquote>"{t.texte}"</blockquote>
              <cite>‚Äî {t.nom}</cite>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê DEVIS + CONTACT ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section" id="devis">
    <div class="container">
      <div class="sec-head">
        <span class="sec-tag reveal font-mono">// CONTACT & DEVIS</span>
        <h2 class="sec-title reveal reveal-d1">D√©crivez votre besoin,<br><span class="text-blue">on vous rappelle sous 24h</span></h2>
      </div>

      <div class="devis-grid">
        <div class="devis-form slide-left" id="devisForm">
          <div class="f-row">
            <div class="fg"><label>Nom complet *</label><input type="text" id="dNom" placeholder="Votre nom" required /></div>
            <div class="fg"><label>T√©l√©phone *</label><input type="tel" id="dTel" placeholder="06 00 00 00 00" required /></div>
          </div>
          <div class="fg"><label>Email</label><input type="email" id="dEmail" placeholder="email@exemple.fr" /></div>
          <div class="f-row">
            <div class="fg"><label>Type d'intervention *</label>
              <select id="dPresta" required>
                <option value="">Choisir...</option>
                {client.services.map(s => <option value={s.titre}>{s.icone} {s.titre}</option>)}
                <option value="Autre">Autre</option>
              </select>
            </div>
            <div class="fg"><label>Urgence</label>
              <select id="dUrg">
                <option value="Non, planifi√©">Non, planifi√©</option>
                <option value="Sous 48h">Sous 48h</option>
                <option value="Urgence imm√©diate">‚ö° Urgence imm√©diate</option>
              </select>
            </div>
          </div>
          <div class="fg"><label>Description du besoin *</label>
            <textarea id="dMsg" rows="4" placeholder="Ex : Mon disjoncteur saute r√©guli√®rement depuis 2 jours. Maison de 1985, tableau ancien..." required></textarea>
          </div>
          <button class="btn-blue btn-lg btn-full" id="devisBtn" type="button">Envoyer ma demande</button>
          <p class="form-note">‚úÖ Devis gratuit ‚Äî Sans engagement ‚Äî R√©ponse sous 24h</p>
        </div>

        <div class="devis-info slide-right" id="contact">
          <div class="di-card">
            <h4>üìû Urgence / Contact</h4>
            <a href={client.telephoneLink} class="di-phone font-mono">{client.telephone}</a>
            <a href={`mailto:${client.email}`}>{client.email}</a>
            <p style="margin-top:8px;font-size:12px;color:var(--text-light);">{client.horaires}</p>
          </div>
          <div class="di-card">
            <h4>üìç Adresse</h4>
            <p>{client.adresse}</p>
          </div>
          {client.googleMapsEmbed && (
            <div class="di-card" style="padding:0;overflow:hidden;">
              <iframe src={client.googleMapsEmbed} width="100%" height="200" style="border:0;filter:invert(0.92) hue-rotate(180deg) brightness(1.1) contrast(0.9);display:block;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          )}
          <div class="di-card">
            <h4>üó∫Ô∏è Zone</h4>
            <p class="font-mono" style="font-size:11px;line-height:1.8;color:var(--text-light);">{client.rayonKm}</p>
            <a href="/zone" style="font-size:13px;color:var(--blue-light);margin-top:6px;display:inline-block;">Voir les communes ‚Üí</a>
          </div>
          {socials.length > 0 && (
            <div class="di-card">
              <h4>Suivez-nous</h4>
              <div class="social-links" style="margin-top:6px;">
                {socials.map(([k,v]) => (
                  <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
                ))}
              </div>
            </div>
          )}
        </div>

        <div class="devis-ok" id="devisSuccess" style="display:none;">
          <div style="font-size:48px;margin-bottom:12px;">‚ö°</div>
          <h3>Demande envoy√©e !</h3>
          <p>Nous √©tudions votre besoin et vous recontactons sous 24 heures.</p>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div>
          <span class="footer-logo">{client.nom}</span>
          <p class="footer-desc">{client.specialite}. {client.ville}, {client.departement}.</p>
          {socials.length > 0 && (
            <div class="social-links" style="margin-top:14px;">
              {socials.map(([k,v]) => (
                <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
              ))}
            </div>
          )}
        </div>
        <div>
          <h4>Navigation</h4>
          <a href="/">Accueil</a><a href="/#services">Services</a><a href="/realisations">R√©alisations</a>
          <a href="/a-propos">√Ä propos</a><a href="/tarifs">Tarifs</a><a href="/zone">Zone</a><a href="/#devis">Devis</a>
        </div>
        <div>
          <h4>Contact</h4>
          <a href={client.telephoneLink}>{client.telephone}</a>
          <a href={`mailto:${client.email}`}>{client.email}</a>
          <span class="footer-addr">{client.adresse}</span>
        </div>
        <div>
          <h4>L√©gal</h4>
          <a href="/mentions-legales">Mentions l√©gales</a>
          <a href="https://vitemonsite-artisan.fr" target="_blank" rel="noopener" class="footer-badge">Site par <strong>LORN Digital Studio</strong></a>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2026 {client.nom} ‚Äî {client.ville}</p>
      </div>
    </div>
  </footer>

</Layout>


<script define:vars={{ web3Key }}>
  const btn=document.getElementById('devisBtn'),form=document.getElementById('devisForm'),ok=document.getElementById('devisSuccess');
  btn?.addEventListener('click',async()=>{
    const nom=document.getElementById('dNom')?.value,tel=document.getElementById('dTel')?.value,
      email=document.getElementById('dEmail')?.value,presta=document.getElementById('dPresta')?.value,
      urg=document.getElementById('dUrg')?.value,msg=document.getElementById('dMsg')?.value;
    if(!nom||!tel||!presta||!msg){alert('Remplissez les champs obligatoires.');return;}
    btn.disabled=true;btn.textContent='Envoi...';
    if(web3Key){try{
      const r=await fetch('https://api.web3forms.com/submit',{method:'POST',headers:{'Content-Type':'application/json'},
        body:JSON.stringify({access_key:web3Key,subject:'‚ö° Devis √©lectricien ‚Äî '+nom+' ‚Äî '+presta,from_name:nom,telephone:tel,email,prestation:presta,urgence:urg,message:msg})});
      const d=await r.json();if(d.success&&form&&ok){form.style.display='none';ok.style.display='block';return;}
    }catch(e){}}
    window.location.href='mailto:lorn.digital.studio@gmail.com?subject='+encodeURIComponent('Devis √©lectricien ‚Äî '+presta)+
      '&body='+encodeURIComponent('Nom: '+nom+'\nT√©l: '+tel+'\nIntervention: '+presta+'\nUrgence: '+urg+'\n\n'+msg);
  });
</script>


<style>
  /* ‚ïê‚ïê‚ïê URGENCE BAR ‚ïê‚ïê‚ïê */
  .urgence-bar{position:fixed;top:0;left:0;right:0;z-index:110;background:var(--bg-card);border-bottom:1px solid var(--border-blue);padding:10px 0;}
  .urgence-inner{display:flex;align-items:center;justify-content:center;gap:12px;flex-wrap:wrap;}
  .urgence-pulse{width:8px;height:8px;border-radius:50%;background:var(--red);box-shadow:0 0 12px var(--red);animation:pulse 1.5s ease-in-out infinite;}
  .urgence-text{font-size:13px;font-weight:600;color:var(--text);}
  .urgence-phone{font-size:15px;font-weight:700;color:var(--blue-light);letter-spacing:0.04em;}

  /* ‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê */
  .navbar{position:fixed;top:0;left:0;right:0;z-index:100;padding:10px clamp(0.75rem,3vw,2rem);transition:padding 0.4s,top 0.4s;}
  .navbar.scrolled{padding-top:5px;padding-bottom:5px;}
  .nav-inner{max-width:1140px;margin:0 auto;padding:10px 18px;border-radius:14px;background:rgba(11,15,26,0.88);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);border:1px solid var(--border);box-shadow:0 4px 24px rgba(0,0,0,0.3);display:flex;align-items:center;justify-content:space-between;gap:8px;transition:all 0.4s;}
  .navbar.scrolled .nav-inner{padding:7px 14px;}
  .nav-logo{display:flex;align-items:center;gap:8px;}
  .nav-logo-img{width:36px;height:36px;border-radius:8px;object-fit:contain;}
  .nav-name{font-size:16px;font-weight:700;color:var(--blue-light);}
  .nav-links{display:flex;gap:2px;align-items:center;}
  .nav-links a{font-size:13px;font-weight:500;color:var(--text-muted);padding:7px 12px;border-radius:8px;transition:all 0.3s;white-space:nowrap;}
  .nav-links a:hover{color:var(--blue-light);}
  .nav-cta{padding:8px 18px!important;border-radius:10px!important;background:var(--blue)!important;color:#fff!important;font-weight:700!important;font-size:12px!important;}
  .nav-cta:hover{background:var(--blue-dark)!important;transform:translateY(-1px);}
  .burger{display:none;background:none;border:none;cursor:pointer;padding:8px;flex-direction:column;gap:5px;}
  .burger span{width:20px;height:2px;background:var(--blue-light);border-radius:2px;display:block;transition:all 0.3s;}
  .burger.open span:nth-child(1){transform:rotate(45deg) translateY(7px);} .burger.open span:nth-child(2){opacity:0;} .burger.open span:nth-child(3){transform:rotate(-45deg) translateY(-7px);}
  .nav-mobile{display:none;max-width:1140px;margin:6px auto 0;padding:12px;border-radius:14px;background:rgba(11,15,26,0.95);backdrop-filter:blur(20px);border:1px solid var(--border);flex-direction:column;gap:2px;}
  .nav-mobile.open{display:flex;}
  .nav-mobile a{padding:12px 14px;border-radius:10px;font-size:15px;color:var(--text);font-weight:500;}
  .mob-cta{margin-top:6px;padding:13px!important;border-radius:10px;background:var(--blue);color:#fff!important;text-align:center;font-weight:700!important;}
  @media(max-width:768px){.nav-links{display:none!important;}.burger{display:flex!important;}}

  /* ‚ïê‚ïê‚ïê HERO ‚Äî Diagonal with grid overlay ‚ïê‚ïê‚ïê */
  .hero{position:relative;min-height:100vh;display:flex;align-items:center;overflow:hidden;}
  .hero-bg{position:absolute;inset:0;z-index:0;} .hero-bg img{width:100%;height:100%;object-fit:cover;}
