---
// ══════════════════════════════════════════════════════════════
// PAGE — TARIFS
// DÉSACTIVABLE : mv src/pages/tarifs.astro src/pages-off/tarifs.astro
// ══════════════════════════════════════════════════════════════
import Layout from '../layouts/Layout.astro';
import { client } from '../data/client';
const faq = [
  { q: "Le déplacement est-il payant ?", r: "Le forfait déplacement + diagnostic est de 49€, déduit du montant si vous confiez l'intervention." },
  { q: "Intervenez-vous le week-end ?", r: "Oui, les dépannages urgents sont pris en charge 7j/7. Un supplément de 30% s'applique hors horaires ouvrés." },
  { q: "Les fournitures sont incluses ?", r: "Les tarifs indiqués incluent généralement les fournitures standards. Pour du matériel spécifique, le devis le détaillera." },
  { q: "Acceptez-vous les chèques énergie ?", r: "Oui, nous acceptons les chèques énergie et sommes éligibles à certaines aides (MaPrimeRénov' pour l'éclairage LED par ex.)." },
];
---
<Layout title={`Tarifs — ${client.nom}`}>
  <div class="page-top"><div class="container" style="display:flex;justify-content:space-between;align-items:center;"><a href="/" class="back-link">← Retour</a><span style="font-weight:700;color:var(--blue-light);font-size:15px;">{client.nom}</span></div></div>
  <section class="section"><div class="container">
    <div style="text-align:center;margin-bottom:48px;">
      <span class="sec-tag reveal font-mono">// TARIFS</span>
      <h1 class="sec-title reveal reveal-d1">Tarifs <span class="text-blue">indicatifs</span></h1>
      <p class="sub reveal reveal-d2">Chaque intervention est unique. Devis gratuit et détaillé sur place.</p>
    </div>
    {client.tarifs.map((cat, ci) => (
      <div class="tarif-section">
        <h3 class={`tarif-cat reveal ${ci>0?'reveal-d1':''}`}>{cat.categorie}</h3>
        <div class="tarif-list">{cat.items.map(item => (
          <div class="tarif-row reveal hover-lift">
            <div><strong>{item.nom}</strong><small>{item.detail}</small></div>
            <span class="tarif-prix font-mono">{item.prix}</span>
          </div>
        ))}</div>
      </div>
    ))}
    <div class="tarif-note reveal"><p>⚠️ Tarifs indicatifs TTC. Un devis gratuit et détaillé est établi avant toute intervention.</p></div>
    <h2 class="sec-title reveal" style="text-align:center;margin:48px 0 32px;font-size:clamp(1.6rem,3vw,2.2rem);">Questions <span class="text-blue">fréquentes</span></h2>
    <div class="faq-grid">{faq.map((f,i) => (
      <div class={`faq-card hover-lift reveal ${i>0?`reveal-d${Math.min(i,3)}`:''}`}><h4>{f.q}</h4><p>{f.r}</p></div>
    ))}</div>
    <div style="text-align:center;margin-top:56px;" class="reveal"><a href="/#devis" class="btn-blue btn-lg">Demander un devis gratuit →</a></div>
  </div></section>
</Layout>
<style>
  .page-top{padding:100px 0 0;} .back-link{color:var(--blue-light);font-size:14px;font-weight:500;}
  .sec-tag{display:block;font-size:11px;color:var(--blue);letter-spacing:0.15em;margin-bottom:8px;}
  .sec-title{font-size:clamp(1.8rem,4vw,2.6rem);font-weight:700;color:var(--white);line-height:1.12;}
  .sub{font-size:15px;color:var(--text-muted);max-width:460px;margin:10px auto 0;}
  .tarif-section{margin-bottom:40px;}
  .tarif-cat{font-size:22px;font-weight:700;color:var(--white);margin-bottom:14px;padding-bottom:10px;border-bottom:2px solid var(--border);}
  .tarif-list{display:flex;flex-direction:column;gap:4px;}
  .tarif-row{display:flex;justify-content:space-between;align-items:center;padding:16px 20px;border-radius:12px;background:var(--bg-card);border:1px solid var(--border);transition:transform 0.3s,box-shadow 0.3s;}
  .tarif-row strong{font-size:15px;color:var(--white);display:block;}.tarif-row small{font-size:12px;color:var(--text-muted);display:block;margin-top:2px;}
  .tarif-prix{font-size:18px;font-weight:700;color:var(--blue-light);white-space:nowrap;}
  .tarif-note{margin:32px 0;padding:20px 24px;border-radius:12px;background:var(--blue-glow);border:1px solid var(--border-blue);}
  .tarif-note p{font-size:14px;color:var(--text);line-height:1.7;}
  .faq-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:14px;}
  .faq-card{padding:24px;border-radius:14px;background:var(--bg-card);border:1px solid var(--border);transition:transform 0.3s,box-shadow 0.3s;}
  .faq-card h4{font-size:15px;font-weight:700;color:var(--white);margin-bottom:8px;}.faq-card p{font-size:13.5px;color:var(--text-muted);line-height:1.7;}
  .btn-blue{display:inline-flex;align-items:center;gap:8px;padding:15px 32px;border-radius:12px;background:var(--blue);color:#fff;font-weight:700;font-size:15px;border:none;cursor:pointer;transition:all 0.3s;} .btn-blue:hover{background:var(--blue-dark);transform:translateY(-2px);} .btn-lg{padding:18px 40px;font-size:16px;}
  @media(max-width:768px){.tarif-row{flex-direction:column;align-items:flex-start;gap:8px;}.tarif-prix{align-self:flex-end;}.faq-grid{grid-template-columns:1fr;}}
</style>
