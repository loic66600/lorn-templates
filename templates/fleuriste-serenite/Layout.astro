  .lorn-badge:hover { color: var(--primary); border-color: var(--primary); }

  /* ============================================================
   * ANIMATIONS
   * ============================================================ */
  .reveal {
    opacity: 0;
    transform: translateY(28px);
    transition: opacity 0.7s ease, transform 0.7s ease;
  }
  .reveal.visible { opacity: 1; transform: translateY(0); }
  .reveal-d1 { transition-delay: 0.1s; }
  .reveal-d2 { transition-delay: 0.2s; }
  .reveal-d3 { transition-delay: 0.3s; }
  .reveal-d4 { transition-delay: 0.4s; }
  .reveal-d5 { transition-delay: 0.5s; }

  .slide-left {
    opacity: 0; transform: translateX(-36px);
    transition: opacity 0.7s ease, transform 0.7s ease;
  }
  .slide-left.visible { opacity: 1; transform: translateX(0); }

  .slide-right {
    opacity: 0; transform: translateX(36px);
    transition: opacity 0.7s ease, transform 0.7s ease;
  }
  .slide-right.visible { opacity: 1; transform: translateX(0); }

  .blur-sharp {
    opacity: 0; filter: blur(8px);
    transition: opacity 0.8s ease, filter 0.8s ease;
  }
  .blur-sharp.visible { opacity: 1; filter: blur(0); }

  .hover-lift { transition: transform 0.25s ease, box-shadow 0.25s ease; }
  .hover-lift:hover { transform: translateY(-6px); box-shadow: var(--shadow-lg); }

  .img-zoom { overflow: hidden; }
  .img-zoom img { transition: transform 0.6s ease; }
  .img-zoom:hover img { transform: scale(1.06); }

  /* === ANIMATION SIGNATURE : PETAL DRIFT === */
  .petals-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .petal {
    position: absolute;
    top: -40px;
    opacity: 0;
    animation: petalDrift linear infinite;
  }

  @keyframes petalDrift {
    0% {
      transform: translateX(0) translateY(0) rotate(0deg);
      opacity: 0;
    }
    5% { opacity: 0.7; }
    85% { opacity: 0.4; }
    100% {
      transform: translateX(var(--drift-x)) translateY(110vh) rotate(var(--drift-rot));
      opacity: 0;
    }
  }

  /* Counter pop */
  @keyframes countPop {
    0% { transform: scale(0.6); opacity: 0; }
    70% { transform: scale(1.08); }
    100% { transform: scale(1); opacity: 1; }
  }

  .counter-pop { opacity: 0; }
  .counter-pop.popped { animation: countPop 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards; }

  /* Clip reveal */
  .clip-reveal {
    clip-path: inset(0 100% 0 0);
    transition: clip-path 0.9s cubic-bezier(0.76, 0, 0.24, 1);
  }
  .clip-reveal.visible { clip-path: inset(0 0% 0 0); }

  /* Fade slide in (menu filter) */
  @keyframes fadeSlideIn {
