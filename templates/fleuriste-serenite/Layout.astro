  .footer-bottom p { font-size: 12px; color: rgba(245,237,232,0.35); }

  .lorn-badge {
    font-size: 11px;
    color: rgba(245,237,232,0.35);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 5px 12px;
    border-radius: var(--radius-full);
    transition: all 0.2s;
