    to { opacity: 1; transform: translateY(0); }
  }
  .fade-in { animation: fadeSlideIn 0.35s ease forwards; }

  /* ============================================================
   * COOKIE BANNER
   * ============================================================ */
  .cookie-banner {
    position: fixed;
    bottom: 0; left: 0; right: 0;
    z-index: 9999;
    background: var(--bg-card);
    border-top: 1px solid var(--border);
    padding: 18px 24px;
    display: none;
