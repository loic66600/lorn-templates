  .cookie-banner.visible { display: block; animation: fadeSlideIn 0.4s ease; }

  .cookie-inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
