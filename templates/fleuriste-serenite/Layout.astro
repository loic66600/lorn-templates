  .burger-btn.open span:nth-child(3) { transform: translateY(-6.5px) rotate(-45deg); }

  .mobile-menu {
    position: fixed;
    top: var(--nav-height); left: 0; right: 0; bottom: 0;
    background: var(--bg);
    padding: 48px 32px;
    display: flex;
