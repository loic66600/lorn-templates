---
// DÉSACTIVABLE : mv src/pages/a-propos.astro src/pages-off/a-propos.astro
import Layout from './Layout.astro';
import { client } from './client';
---

<Layout
  title={`À Propos — ${client.nom} | Fleuriste Artisanale`}
  description={`L'histoire de ${client.nom}, fleuriste artisanale passionnée. ${client.apropos.sousTitre}`}
>
  <nav class="nav scrolled">
    <div class="nav-inner">
      <a href="/" class="nav-logo">{client.nom}<span>{client.slogan}</span></a>
      <ul class="nav-links">
        <li><a href="/">Accueil</a></li>
        <li><a href="/realisations">Créations</a></li>
        <li><a href="/tarifs">Tarifs</a></li>
        <li><a href="/a-propos" class="active">À Propos</a></li>
        <li><a href="/#contact">Contact</a></li>
      </ul>
      <div class="nav-cta">
        <a href={client.telephoneLink} class="nav-tel">{client.telephone}</a>
        <a href="/#contact" class="btn btn-primary">Demander un devis</a>
      </div>
      <button class="burger-btn" aria-label="Menu"><span></span><span></span><span></span></button>
    </div>
  </nav>
  <div class="mobile-menu">
    <a href="/">Accueil</a><a href="/realisations">Créations</a><a href="/tarifs">Tarifs</a><a href="/a-propos">À Propos</a>
    <div class="mobile-cta"><a href="/#contact" class="btn btn-primary">Demander un devis</a></div>
  </div>

  <header class="page-header">
    <div class="container">
      <div class="breadcrumb reveal"><a href="/">Accueil</a><span>→</span><span>À Propos</span></div>
      <h1 class="page-title reveal reveal-d1">Mon <em>Histoire</em></h1>
    </div>
  </header>

  <section class="section">
    <div class="container">
      <div class="story-grid">
        <div class="story-text reveal slide-left">
          <p class="section-label">{client.metier} artisanale</p>
          <h2 class="section-title">{client.apropos.titre}</h2>
          <p class="story-sub">{client.apropos.sousTitre}</p>
          <p class="story-body">{client.apropos.paragraphe1}</p>
          <p class="story-body">{client.apropos.paragraphe2}</p>

          {client.apropos.certifications.length > 0 && (
            <div class="certifs">
              <p class="certifs-label">Formations & Diplômes</p>
              <div class="certifs-list">
                {client.apropos.certifications.map(c => (
                  <span class="certif-badge">✓ {c}</span>
                ))}
              </div>
            </div>
          )}

          <div class="story-ctas">
            <a href="/#contact" class="btn btn-primary btn-lg">Me contacter</a>
            <a href="/realisations" class="btn btn-outline btn-lg">Voir mes créations</a>
          </div>
        </div>

        <div class="story-img reveal slide-right">
          <div class="img-wrap">
            <img src={client.apropos.image} alt={client.apropos.imageAlt} loading="lazy" />
            <div class="img-decoration"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-alt">
    <div class="container">
      <div class="reveal" style="text-align: center; margin-bottom: 48px;">
        <p class="section-label">Ce qui me guide</p>
        <h2 class="section-title">Mes <em>valeurs</em></h2>
      </div>
      <div class="valeurs-grid">
        {client.apropos.valeurs.map((v, i) => (
          <div class={`valeur-card hover-lift reveal reveal-d${i + 1}`}>
            <span class="valeur-icon">{v.icone}</span>
            <h3 class="valeur-title">{v.titre}</h3>
            <p class="valeur-desc">{v.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="container">
      <div class="footer-bottom" style="border-top: none; padding-top: 0;">
        <p>© {new Date().getFullYear()} {client.nom}. <a href="/mentions-legales" style="color: rgba(245,237,232,0.35);">Mentions légales</a></p>
        <a href="https://lorn.dev" target="_blank" rel="noopener" class="lorn-badge">Site par LORN Digital Studio</a>
      </div>
    </div>
  </footer>
</Layout>

<style>
  .nav.scrolled { background: rgba(253,248,245,0.97); backdrop-filter: blur(20px); box-shadow: 0 1px 0 var(--border); }
  .page-header { padding: 120px 0 56px; background: var(--bg-alt); border-bottom: 1px solid var(--border); }
  .breadcrumb { display: flex; align-items: center; gap: 8px; font-size: 13px; color: var(--text-muted); margin-bottom: 18px; }
  .breadcrumb a:hover { color: var(--primary); }
  .page-title { font-family: var(--font-display); font-size: clamp(2.8rem, 6vw, 5rem); font-weight: 400; line-height: 1; }
  .page-title em { font-style: italic; color: var(--primary); font-weight: 300; }

  .story-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 72px; align-items: center; }

  .story-sub {
    font-family: var(--font-display);
    font-style: italic;
    font-size: 1.15rem;
    color: var(--primary);
    margin: 16px 0 24px;
    line-height: 1.6;
    font-weight: 300;
  }

  .story-body {
    font-size: 1rem;
    color: var(--text-muted);
    line-height: 1.85;
    margin-bottom: 16px;
  }

  .certifs { margin: 24px 0; }

  .certifs-label {
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: 12px;
  }

  .certifs-list { display: flex; flex-wrap: wrap; gap: 8px; }

  .certif-badge {
    padding: 5px 14px;
    background: rgba(22,101,52,0.08);
    border: 1px solid rgba(22,101,52,0.2);
    border-radius: var(--radius-full);
    font-size: 13px;
    font-weight: 600;
    color: var(--green);
  }

  .story-ctas { display: flex; gap: 14px; flex-wrap: wrap; margin-top: 28px; }

  .img-wrap {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .img-wrap img { width: 100%; aspect-ratio: 4/5; object-fit: cover; }

  .img-decoration {
    position: absolute;
    bottom: -12px;
    right: -12px;
    width: 60%;
    height: 60%;
    border: 3px solid var(--primary);
    border-radius: var(--radius-lg);
    opacity: 0.2;
    pointer-events: none;
  }

  .valeurs-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }

  .valeur-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: 28px 22px;
    text-align: center;
    transition: border-color 0.2s;
  }
  .valeur-card:hover { border-color: var(--primary); }

  .valeur-icon { font-size: 2.2rem; display: block; margin-bottom: 14px; }
  .valeur-title { font-family: var(--font-display); font-size: 1.1rem; font-weight: 600; margin-bottom: 10px; }
  .valeur-desc { font-size: 13px; color: var(--text-muted); line-height: 1.6; }

  @media (max-width: 1024px) { .valeurs-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 768px) {
    .story-grid { grid-template-columns: 1fr; gap: 40px; }
    .valeurs-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 480px) { .valeurs-grid { grid-template-columns: 1fr; } }
</style>
