            <textarea id="dMsg" rows="4" placeholder="Ex : Fuite sous l'√©vier de la cuisine depuis ce matin. L'eau coule en continu au niveau du siphon..." required></textarea>
          </div>
          <button class="btn-teal btn-lg btn-full" id="devisBtn" type="button">Envoyer ma demande</button>
          <p class="form-note">‚úÖ Devis gratuit ‚Äî Sans engagement ‚Äî R√©ponse sous 24h</p>
        </div>

        <div class="devis-info slide-right">
          <div class="di-card di-card-accent">
            <h4>üìû Urgence plomberie</h4>
            <a href={client.telephoneLink} class="di-phone font-head">{client.telephone}</a>
            <p>{client.urgenceHoraires}</p>
          </div>
          <div class="di-card">
            <h4>üìç Adresse</h4>
            <p>{client.adresse}</p>
            <p style="margin-top:4px;font-size:12px;color:var(--text-light);">{client.horaires}</p>
          </div>
          {client.googleMapsEmbed && (
            <div class="di-card" style="padding:0;overflow:hidden;">
              <iframe src={client.googleMapsEmbed} width="100%" height="200" style="border:0;border-radius:14px;filter:saturate(0.8) contrast(1.05);" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          )}
          <div class="di-card">
            <h4>üó∫Ô∏è Zone : {client.rayonKm}</h4>
            <p style="font-size:12px;color:var(--text-light);line-height:1.8;">{client.zones}</p>
          </div>
          {socials.length > 0 && (
            <div class="di-card">
              <h4>Suivez-nous</h4>
              <div class="social-links" style="margin-top:4px;">
                {socials.map(([k,v]) => (
                  <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
                ))}
              </div>
            </div>
          )}
        </div>

        <div class="devis-ok" id="devisSuccess" style="display:none;">
          <div style="font-size:48px;margin-bottom:12px;">üíß</div>
          <h3 class="font-head">Demande envoy√©e !</h3>
          <p>Nous √©tudions votre besoin et vous recontactons sous 24 heures.</p>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div>
          <span class="footer-logo font-head">{client.nom}</span>
          <p class="footer-desc">{client.specialite}. {client.ville}, {client.departement}.</p>
          {socials.length > 0 && (
            <div class="social-links" style="margin-top:14px;">
              {socials.map(([k,v]) => <a href={v} target="_blank" rel="noopener" class="social-link social-link-dark" title={k} set:html={socialIcons[k] || k} />)}
            </div>
          )}
        </div>
        <div>
          <h4>Navigation</h4>
          <a href="/">Accueil</a><a href="/#services">Services</a><a href="/realisations">R√©alisations</a>
          <a href="/a-propos">√Ä propos</a><a href="/tarifs">Tarifs</a><a href="/#devis">Devis</a>
        </div>
        <div>
          <h4>Contact</h4>
          <a href={client.telephoneLink}>{client.telephone}</a>
          <a href={`mailto:${client.email}`}>{client.email}</a>
          <span class="footer-addr">{client.adresse}</span>
        </div>
        <div>
          <h4>L√©gal</h4>
          <a href="/mentions-legales">Mentions l√©gales</a>
          <a href="https://vitemonsite-artisan.fr" target="_blank" rel="noopener" class="footer-badge">Site par <strong>LORN Digital Studio</strong></a>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2026 {client.nom} ‚Äî {client.ville}</p>
      </div>
    </div>
  </footer>

</Layout>


<script>
  // Testimonial carousel
  const track=document.getElementById('testTrack'),dots=document.querySelectorAll('.test-dot');
  let cur=0;const total=dots.length;
  function goTo(n:number){cur=n;if(track)track.style.transform=`translateX(-${cur*100}%)`;dots.forEach((d,i)=>d.classList.toggle('active',i===cur));}
  dots.forEach(d=>d.addEventListener('click',()=>goTo(parseInt((d as HTMLElement).dataset.idx||'0'))));
  setInterval(()=>goTo((cur+1)%total),6000);
</script>

<script define:vars={{ web3Key }}>
  const btn=document.getElementById('devisBtn'),form=document.getElementById('devisForm'),ok=document.getElementById('devisSuccess');
  btn?.addEventListener('click',async()=>{
    const nom=document.getElementById('dNom')?.value,tel=document.getElementById('dTel')?.value,
      email=document.getElementById('dEmail')?.value,presta=document.getElementById('dPresta')?.value,
      urg=document.getElementById('dUrg')?.value,msg=document.getElementById('dMsg')?.value;
    if(!nom||!tel||!presta||!msg){alert('Remplissez les champs obligatoires.');return;}
    btn.disabled=true;btn.textContent='Envoi...';
    if(web3Key){try{
      const r=await fetch('https://api.web3forms.com/submit',{method:'POST',headers:{'Content-Type':'application/json'},
        body:JSON.stringify({access_key:web3Key,subject:'üíß Devis plomberie ‚Äî '+nom+' ‚Äî '+presta,from_name:nom,telephone:tel,email,prestation:presta,urgence:urg,message:msg})});
      const d=await r.json();if(d.success&&form&&ok){form.style.display='none';ok.style.display='block';return;}
    }catch(e){}}
    window.location.href='mailto:lorn.digital.studio@gmail.com?subject='+encodeURIComponent('Devis plomberie ‚Äî '+presta)+
      '&body='+encodeURIComponent('Nom: '+nom+'\nT√©l: '+tel+'\nIntervention: '+presta+'\nUrgence: '+urg+'\n\n'+msg);
  });
</script>


<style>
  /* ‚ïê‚ïê‚ïê URGENCE BAR ‚ïê‚ïê‚ïê */
  .urgence-bar{position:fixed;top:0;left:0;right:0;z-index:110;background:#FFF;border-bottom:1px solid var(--border);padding:12px 0;}
  .urgence-inner{display:flex;align-items:center;justify-content:center;gap:12px;flex-wrap:wrap;font-size:13px;font-weight:600;color:var(--text);}
  .urgence-ripple-wrap{position:relative;width:10px;height:10px;}
  .urgence-dot{width:10px;height:10px;border-radius:50%;background:var(--red);position:absolute;}
  .urgence-ripple{position:absolute;inset:0;border-radius:50%;background:var(--red);animation:ripple 2s ease-out infinite;}
  .urgence-phone{font-weight:800;color:var(--teal);letter-spacing:0.02em;}
  .urgence-hours{font-size:11px;color:var(--text-muted);font-weight:400;}

  /* ‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê */
  .navbar{position:fixed;top:0;left:0;right:0;z-index:100;padding:10px clamp(0.75rem,3vw,2rem);transition:padding 0.4s,top 0.4s;}
  .navbar.scrolled{padding-top:5px;padding-bottom:5px;}
  .nav-inner{max-width:1120px;margin:0 auto;padding:10px 18px;border-radius:14px;background:rgba(248,250,251,0.92);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);border:1px solid var(--border);box-shadow:0 1px 3px rgba(12,35,64,0.03),0 8px 24px rgba(12,35,64,0.04);display:flex;align-items:center;justify-content:space-between;gap:8px;transition:all 0.4s;}
  .navbar.scrolled .nav-inner{padding:7px 14px;}
  .nav-logo{display:flex;align-items:center;gap:8px;}
  .nav-logo-img{width:36px;height:36px;border-radius:8px;object-fit:contain;}
  .nav-name{font-size:16px;font-weight:800;color:var(--navy);}
  .nav-links{display:flex;gap:2px;align-items:center;}
  .nav-links a{font-size:13px;font-weight:500;color:var(--text-muted);padding:7px 12px;border-radius:8px;transition:all 0.3s;white-space:nowrap;}
  .nav-links a:hover{color:var(--teal);}
  .nav-cta{padding:8px 18px!important;border-radius:10px!important;background:var(--teal)!important;color:#fff!important;font-weight:700!important;font-size:12px!important;}
  .nav-cta:hover{background:var(--teal-dark)!important;transform:translateY(-1px);}
  .burger{display:none;background:none;border:none;cursor:pointer;padding:8px;flex-direction:column;gap:5px;}
