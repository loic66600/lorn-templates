  <section class="section" id="services">
    <div class="container">
      <div class="sec-head">
        <span class="sec-pill reveal">Nos prestations</span>
        <h2 class="sec-title font-head reveal reveal-d1">Plomberie, chauffage, <span class="text-teal">sanitaire</span></h2>
      </div>
      <div class="svc-grid">
        {client.services.map((s, i) => (
          <div class={`svc-card hover-lift reveal ${i < 3 ? `reveal-d${i+1}` : ''}`}>
            <div class="svc-img img-zoom">
              <img src={s.image} alt={s.titre} loading="lazy" />
              {s.urgence && <span class="svc-urg">‚ö° Urgence 7j/7</span>}
            </div>
