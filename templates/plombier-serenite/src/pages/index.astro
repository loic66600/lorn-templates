        </div>
        <h1 class="font-head reveal reveal-d1">
          Votre plombier <span class="text-teal">de confiance</span> √† {client.ville}
        </h1>
        <p class="hero-sub reveal reveal-d2">{client.slogan}.</p>
        <div class="hero-actions reveal reveal-d3">
          <a href="#devis" class="btn-teal btn-lg">Devis gratuit ‚Üí</a>
          <a href={client.telephoneLink} class="btn-navy font-head">üìû {client.telephone}</a>
        </div>
        <div class="hero-trust reveal reveal-d4">
          {client.stats.map(s => (
            <div class="trust-pill">
              <strong class="font-head" data-count={s.chiffre} data-suffix={s.suffix}></strong>
              <span>{s.label}</span>
            </div>
          ))}
        </div>
      </div>
      <div class="hero-visual">
        <div class="hero-img-main clip-reveal">
          <img src={client.heroImage} alt={client.heroImageAlt} loading="eager" />
        </div>
        <div class="hero-float-card reveal reveal-d3">
          <span class="hf-icon">‚ö°</span>
          <div><strong class="font-head">Intervention rapide</strong><small>En ‚Äì de {client.stats[2].chiffre} {client.stats[2].suffix}</small></div>
        </div>
        <div class="hero-float-card hero-float-2 reveal reveal-d4">
          <span class="hf-icon">üõ°Ô∏è</span>
          <div><strong class="font-head">Garantie d√©cennale</strong><small>Qualibat RGE</small></div>
        </div>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê PROCESS ‚Äî Vertical numbered timeline ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
