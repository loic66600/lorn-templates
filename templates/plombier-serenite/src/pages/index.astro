---

<Layout>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê URGENCE BAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  {client.urgence && (
    <div class="urgence-bar">
      <div class="container urgence-inner">
        <div class="urgence-ripple-wrap"><div class="urgence-dot"></div><div class="urgence-ripple"></div></div>
        <span>üíß {client.urgenceTexte}</span>
        <a href={client.telephoneLink} class="urgence-phone font-head">{client.telephone}</a>
        <small class="urgence-hours">{client.urgenceHoraires}</small>
      </div>
    </div>
  )}

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <nav class="navbar" id="navbar" style={client.urgence ? 'top:48px;' : ''}>
    <div class="nav-inner">
      <a href="/" class="nav-logo">
        <img src={client.logo} alt={client.nom} class="nav-logo-img" onerror="this.style.display='none'" />
        <span class="nav-name font-head">{client.nom}</span>
