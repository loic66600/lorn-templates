    <div class="container">
      <div class="sec-head-row">
        <div>
          <span class="sec-pill reveal">R√©alisations</span>
          <h2 class="sec-title font-head reveal reveal-d1">Nos derni√®res <span class="text-teal">interventions</span></h2>
        </div>
        <a href="/realisations" class="btn-outline-teal reveal">Voir tout ‚Üí</a>
      </div>
      <div class="real-mosaic">
        {client.realisations.slice(0,5).map((r, i) => (
          <div class={`real-item blur-sharp ${i === 0 ? 'real-big' : ''}`}>
