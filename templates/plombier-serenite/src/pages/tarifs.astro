---
// ══════════════════════════════════════════════════════════════
// PAGE — TARIFS
// DÉSACTIVABLE : mv src/pages/tarifs.astro src/pages-off/tarifs.astro
// ══════════════════════════════════════════════════════════════
import Layout from '../layouts/Layout.astro';
import { client } from '../data/client';
const faq = [
  { q: "Le déplacement est-il payant ?", r: "Le forfait déplacement + diagnostic est de 39€, déduit du montant de l'intervention si vous nous la confiez." },
  { q: "Quels sont vos délais ?", r: "Urgences : intervention en – de 1h. Travaux planifiés : rendez-vous sous 48-72h selon disponibilité." },
  { q: "Fournissez-vous le matériel ?", r: "Oui, sauf demande contraire. Nous travaillons avec des marques reconnues (Grohe, Hansgrohe, Atlantic...)." },
  { q: "Proposez-vous des facilités de paiement ?", r: "Pour les gros chantiers (salle de bain, chauffage), un paiement en 2 ou 3 fois est possible sans frais." },
];
---
<Layout title={`Tarifs — ${client.nom}`}>
  <div class="page-top"><div class="container" style="display:flex;justify-content:space-between;align-items:center;"><a href="/" class="back-link">← Retour</a><span class="font-head" style="font-weight:800;color:var(--navy);font-size:15px;">{client.nom}</span></div></div>
  <section class="section"><div class="container">
    <div style="text-align:center;margin-bottom:48px;">
      <span class="sec-pill reveal">Tarifs</span>
      <h1 class="sec-title font-head reveal reveal-d1" style="margin-top:10px;">Tarifs <span class="text-teal">indicatifs</span></h1>
      <p class="sub reveal reveal-d2">Chaque intervention est unique. Devis gratuit et détaillé sur place.</p>
    </div>
    {client.tarifs.map((cat, ci) => (
      <div class="tarif-section">
        <h3 class={`tarif-cat font-head reveal ${ci>0?'reveal-d1':''}`}>{cat.categorie}</h3>
        <div class="tarif-list">{cat.items.map(item => (
          <div class="tarif-row reveal hover-lift">
            <div><strong class="font-head">{item.nom}</strong><small>{item.detail}</small></div>
            <span class="tarif-prix font-head">{item.prix}</span>
          </div>
        ))}</div>
      </div>
    ))}
    <div class="tarif-note reveal"><p>⚠️ Tarifs indicatifs TTC. Un devis gratuit et détaillé est établi avant toute intervention. Majorations possibles soir/week-end/jours fériés.</p></div>
    <h2 class="sec-title font-head reveal" style="text-align:center;margin:48px 0 32px;font-size:clamp(1.6rem,3vw,2.2rem);">Questions <span class="text-teal">fréquentes</span></h2>
    <div class="faq-grid">{faq.map((f,i) => (
      <div class={`faq-card hover-lift reveal ${i>0?`reveal-d${Math.min(i,3)}`:''}`}><h4 class="font-head">{f.q}</h4><p>{f.r}</p></div>
    ))}</div>
    <div style="text-align:center;margin-top:56px;" class="reveal"><a href="/#devis" class="btn-teal btn-lg">Demander un devis gratuit →</a></div>
  </div></section>
</Layout>
<style>
  .page-top{padding:100px 0 0;} .back-link{color:var(--teal);font-size:14px;font-weight:500;}
  .sec-pill{display:inline-block;padding:5px 14px;border-radius:100px;background:var(--teal-glow);border:1px solid var(--border-teal);font-size:12px;font-weight:600;color:var(--teal);}
  .sec-title{font-size:clamp(1.8rem,4vw,2.6rem);font-weight:800;color:var(--navy);line-height:1.12;}
  .sub{font-size:15px;color:var(--text-muted);max-width:460px;margin:10px auto 0;}
  .tarif-section{margin-bottom:40px;}
  .tarif-cat{font-size:22px;font-weight:800;color:var(--navy);margin-bottom:14px;padding-bottom:10px;border-bottom:2px solid var(--border);}
  .tarif-list{display:flex;flex-direction:column;gap:4px;}
  .tarif-row{display:flex;justify-content:space-between;align-items:center;padding:16px 20px;border-radius:14px;background:var(--bg-card);border:1px solid var(--border);transition:transform 0.3s,box-shadow 0.3s;}
  .tarif-row strong{font-size:15px;color:var(--navy);display:block;}.tarif-row small{font-size:12px;color:var(--text-muted);display:block;margin-top:2px;}
  .tarif-prix{font-size:18px;font-weight:800;color:var(--teal);white-space:nowrap;}
  .tarif-note{margin:32px 0;padding:20px 24px;border-radius:14px;background:var(--teal-glow);border:1px solid var(--border-teal);}
  .tarif-note p{font-size:14px;color:var(--text);line-height:1.7;}
  .faq-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:14px;}
  .faq-card{padding:24px;border-radius:16px;background:var(--bg-card);border:1px solid var(--border);transition:transform 0.3s,box-shadow 0.3s;}
  .faq-card h4{font-size:15px;font-weight:700;color:var(--navy);margin-bottom:8px;}.faq-card p{font-size:13.5px;color:var(--text-muted);line-height:1.7;}
  .btn-teal{display:inline-flex;align-items:center;gap:8px;padding:14px 28px;border-radius:12px;background:var(--teal);color:#fff;font-weight:700;font-size:15px;border:none;cursor:pointer;transition:all 0.3s;} .btn-teal:hover{background:var(--teal-dark);transform:translateY(-2px);} .btn-lg{padding:16px 36px;font-size:16px;}
  @media(max-width:768px){.tarif-row{flex-direction:column;align-items:flex-start;gap:8px;}.tarif-prix{align-self:flex-end;}.faq-grid{grid-template-columns:1fr;}}
</style>
