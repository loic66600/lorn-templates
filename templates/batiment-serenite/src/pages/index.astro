  <section class="section section-alt" id="realisations">
    <div class="container">
      <div class="sec-head">
        <span class="section-tag reveal">R√©alisations</span>
        <h2 class="section-title reveal reveal-d1">Nos derniers <span class="gradient-text">chantiers</span></h2>
        <p class="section-sub reveal reveal-d2">
          Quelques-unes de nos r√©alisations dans les {client.departement}.
        </p>
      </div>
      <div class="masonry">
        {client.realisations.map((r, i) => (
          <div class={`masonry-item blur-sharp ${i % 3 === 0 ? 'm-tall' : ''}`}>
            <div class="m-img img-zoom">
              <img src={r.image} alt={r.titre} loading="lazy"
                   onerror={`this.parentElement.innerHTML='<div class="placeholder"><span>üì∑</span><p>${r.image}</p></div>'`} />
            </div>
            <div class="m-caption">
              <span class="m-tag">{r.titre}</span>
