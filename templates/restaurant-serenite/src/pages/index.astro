  .hero-bg{position:absolute;inset:0;z-index:0;} .hero-bg img{width:100%;height:100%;object-fit:cover;}
  .hero-overlay{position:absolute;inset:0;z-index:1;background:linear-gradient(180deg,rgba(28,20,18,0.45),rgba(28,20,18,0.75));}
