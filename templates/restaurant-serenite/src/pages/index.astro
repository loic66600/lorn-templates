---
import Layout from '../layouts/Layout.astro';
import { client } from '../data/client';
const web3Key = import.meta.env.PUBLIC_WEB3FORMS_KEY || '';
const socials = Object.entries(client.reseaux).filter(([_,v]) => v);
const socialIcons: Record<string,string> = {
  facebook:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>',
  instagram:'<svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>',
  tiktok:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 006.34 6.34 6.34 6.34 0 006.34-6.34V8.73a8.19 8.19 0 004.76 1.52V6.83a4.84 4.84 0 01-1-.14z"/></svg>',
  tripadvisor:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><circle cx="6.5" cy="13.5" r="2"/><circle cx="17.5" cy="13.5" r="2"/><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.74 0 3.36.56 4.69 1.5H7.31A8.94 8.94 0 0112 5z"/></svg>',
  linkedin:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-4 0v7h-4v-7a6 6 0 016-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>',
  youtube:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2c.312-1.732.466-3.49.46-5.25a29 29 0 00-.46-5.33zM9.75 15.02V8.48l5.75 3.27-5.75 3.27z"/></svg>',
  twitter:'<svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>',
};
const categories = [...new Set(client.carte.map(p => p.categorie))];
---

<Layout>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <nav class="navbar" id="navbar">
    <div class="nav-inner">
      <a href="/" class="nav-logo">
        <img src={client.logo} alt={client.nom} class="nav-logo-img" onerror="this.style.display='none'" />
        <span class="nav-name font-display">{client.nom}</span>
      </a>
      <div class="nav-links">
        <a href="/#carte">La carte</a>
        <a href="/galerie">Galerie</a>
        <a href="/a-propos">Notre histoire</a>
        <a href="/#horaires">Horaires</a>
        <a href="/#reservation" class="nav-cta">R√©server</a>
      </div>
      <button class="burger" id="burger" aria-label="Menu"><span></span><span></span><span></span></button>
    </div>
    <div class="nav-mobile" id="mobile-menu">
      <a href="/#carte">La carte</a>
      <a href="/galerie">Galerie</a>
      <a href="/a-propos">Notre histoire</a>
      <a href="/#horaires">Horaires</a>
      <a href="/#reservation" class="mob-cta">R√©server une table</a>
    </div>
  </nav>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê HERO ‚Äî Centered fullbleed elegant ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="hero">
    <div class="hero-bg ken-burns"><img src={client.heroImage} alt={client.heroImageAlt} loading="eager" /></div>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <span class="hero-sub reveal">{client.specialite}</span>
      <h1 class="font-display reveal reveal-d1">{client.nom}</h1>
      <p class="hero-desc reveal reveal-d2">{client.slogan}</p>
      <div class="hero-actions reveal reveal-d3">
        <a href="#reservation" class="btn-primary btn-lg">R√©server une table</a>
        <a href="#carte" class="btn-ghost">D√©couvrir la carte ‚Üì</a>
      </div>
      <div class="hero-divider reveal reveal-d4">
        <span class="hero-deco">‚ú¶</span>
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê FORMULES ‚Äî Ribbon horizontal ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="formulas-ribbon" id="formules">
    <div class="container">
      <div class="formulas-scroll">
        {client.formules.map((f, i) => (
          <div class={`formula-card hover-lift reveal ${i > 0 ? `reveal-d${i}` : ''}`}>
            <span class="formula-icon">{f.icone}</span>
            <div class="formula-body">
              <div class="formula-top">
                <h3>{f.nom}</h3>
                <span class="formula-prix font-display">{f.prix}</span>
              </div>
              <p>{f.description}</p>
              <small>{f.detail}</small>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê CARTE ‚Äî Image-rich menu with category tabs ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="carte">
    <div class="container">
      <div class="sec-head">
        <span class="section-deco">‚ú¶</span>
        <h2 class="section-title font-display reveal">Notre <em class="text-wine">carte</em></h2>
        <p class="section-sub reveal reveal-d1">Des produits frais, une cuisine de saison, un savoir-faire artisanal.</p>
      </div>

      <div class="menu-tabs reveal" id="menuTabs">
        <button class="menu-tab active" data-cat="Tous">Tous</button>
        {categories.map(cat => (
          <button class="menu-tab" data-cat={cat}>{cat}</button>
        ))}
      </div>

      <div class="menu-grid" id="menuGrid">
        {client.carte.map((plat, i) => (
          <div class={`menu-card hover-lift ${i < 4 ? 'reveal reveal-d' + (i+1) : 'reveal'}`} data-cat={plat.categorie}>
            <div class="menu-img img-zoom">
              <img src={plat.image} alt={plat.nom} loading="lazy" />
              {plat.vegetarien && <span class="menu-veg">üåø V√©g√©tarien</span>}
            </div>
            <div class="menu-info">
              <div class="menu-info-top">
                <h3>{plat.nom}</h3>
                <span class="menu-prix font-display">{plat.prix}</span>
              </div>
              <p>{plat.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê PARALLAX ‚Äî Chef's quote ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="par-banner">
    <div class="par-bg ken-burns"><img src={client.bannerImage} alt="" loading="lazy" /></div>
    <div class="par-ov gradient-shift"></div>
    <div class="container par-ct">
      <span class="par-deco reveal">‚ú¶</span>
      <blockquote class="font-display reveal reveal-d1">"La cuisine, c'est le souvenir<br>qu'on laisse dans l'assiette."</blockquote>
      <p class="reveal reveal-d2">‚Äî {client.apropos.chef}, Chef de cuisine</p>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê GALERIE APER√áU ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section">
    <div class="container">
      <div class="sec-head-row">
        <div>
          <span class="section-deco">‚ú¶</span>
          <h2 class="section-title font-display reveal">L'ambiance <em class="text-wine">en images</em></h2>
        </div>
        <a href="/galerie" class="btn-outline reveal">Voir toute la galerie ‚Üí</a>
      </div>
      <div class="gal-preview">
        {client.galerie.slice(0,5).map((g, i) => (
          <div class={`gal-item blur-sharp${i === 0 ? ' gal-wide' : ''}${i === 3 ? ' gal-span' : ''}`}>
            <div class="img-zoom"><img src={g.image} alt={g.alt} loading="lazy" /></div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê T√âMOIGNAGES ‚Äî Large quote cards ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-alt" id="avis">
    <div class="container">
      <div class="sec-head">
        <span class="section-deco">‚ú¶</span>
        <h2 class="section-title font-display reveal">Ce qu'en disent <em class="text-wine">nos clients</em></h2>
      </div>
      <div class="test-masonry">
        {client.temoignages.map((t, i) => (
          <div class={`test-card hover-lift reveal ${i > 0 ? `reveal-d${Math.min(i,3)}` : ''}`}>
            <div class="test-stars">{Array.from({length:t.note}).map(()=><span>‚òÖ</span>)}</div>
            <blockquote>"{t.texte}"</blockquote>
            <cite>‚Äî {t.nom}</cite>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê HORAIRES + RESERVATION ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section section-dark" id="horaires">
    <div class="container">
      <div class="hr-grid">
        <!-- Horaires -->
        <div class="hr-hours slide-left">
          <span class="section-deco" style="color:var(--gold-pale);">‚ú¶</span>
          <h2 class="font-display" style="color:#fff;font-size:clamp(1.6rem,3vw,2.2rem);font-weight:800;margin-bottom:24px;">Horaires <em style="color:var(--gold-pale);">d'ouverture</em></h2>
          <table class="hours-table">
            <thead><tr><th>Jour</th><th>Midi</th><th>Soir</th></tr></thead>
            <tbody>
              {client.horaires.map(h => (
                <tr class={h.ferme ? 'closed' : ''}>
                  <td>{h.jour}</td>
                  <td>{h.midi}</td>
                  <td>{h.soir}</td>
                </tr>
              ))}
            </tbody>
          </table>
          <div class="hr-contact">
            <a href={client.telephoneLink} class="hr-phone">{client.telephone}</a>
            <p>{client.adresse}</p>
          </div>
        </div>

        <!-- R√©servation -->
        <div class="hr-resa slide-right" id="reservation">
          <h2 class="font-display" style="color:#fff;font-size:clamp(1.6rem,3vw,2.2rem);font-weight:800;margin-bottom:24px;">R√©server <em style="color:var(--gold-pale);">une table</em></h2>

          {client.lienReservation ? (
            <div class="resa-external">
              <p>R√©servez en quelques clics via notre partenaire :</p>
              <a href={client.lienReservation} target="_blank" rel="noopener" class="btn-primary btn-lg" style="margin-top:16px;">R√©server sur TheFork / LaFourchette ‚Üí</a>
            </div>
          ) : (
            <div id="resaForm">
              <div class="f-row">
                <div class="fg"><label>Nom *</label><input type="text" id="rNom" placeholder="Votre nom" required /></div>
                <div class="fg"><label>T√©l√©phone *</label><input type="tel" id="rTel" placeholder="06 00 00 00 00" required /></div>
              </div>
              <div class="f-row">
                <div class="fg"><label>Date *</label><input type="date" id="rDate" required /></div>
                <div class="fg"><label>Heure *</label>
                  <select id="rHeure" required>
                    <option value="">Choisir...</option>
                    <option>12h00</option><option>12h30</option><option>13h00</option><option>13h30</option>
                    <option>19h00</option><option>19h30</option><option>20h00</option><option>20h30</option><option>21h00</option>
                  </select>
                </div>
              </div>
              <div class="f-row">
                <div class="fg"><label>Personnes *</label>
                  <select id="rPers" required>
                    <option value="">Combien ?</option>
                    {[1,2,3,4,5,6,7,8].map(n => <option>{n} {n > 1 ? 'personnes' : 'personne'}</option>)}
                    <option>9+ (nous contacter)</option>
                  </select>
                </div>
                <div class="fg"><label>Occasion</label>
                  <select id="rOccasion">
                    <option value="">‚Äî</option>
                    <option>Anniversaire</option><option>D√Æner romantique</option><option>Repas d'affaires</option><option>Autre</option>
                  </select>
                </div>
              </div>
              <div class="fg"><label>Demande particuli√®re</label>
                <textarea id="rMsg" rows="2" placeholder="Allergies, terrasse souhait√©e, chaise b√©b√©..."></textarea>
              </div>
              <button class="btn-primary btn-lg btn-full" id="resaBtn" type="button">R√©server ma table</button>
              <p class="form-note">Confirmation par t√©l√©phone sous 2h</p>
            </div>
          )}

          <div id="resaSuccess" style="display:none;text-align:center;padding:40px 0;">
            <div style="font-size:48px;margin-bottom:12px;">üçΩÔ∏è</div>
            <h3 style="color:#fff;font-size:22px;font-weight:800;margin-bottom:8px;">Table r√©serv√©e !</h3>
            <p style="color:#A89888;font-size:15px;">Nous confirmons votre r√©servation par t√©l√©phone sous 2 heures.</p>
          </div>
        </div>
      </div>

      <!-- Google Maps -->
      {client.googleMapsEmbed && (
        <div class="map-wrap reveal" style="margin-top:40px;">
          <iframe src={client.googleMapsEmbed} width="100%" height="300" style="border:0;border-radius:16px;filter:sepia(0.3) contrast(1.05) brightness(0.85);" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      )}
    </div>
  </section>


  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <footer class="footer">
    <div class="container">
      <div class="footer-top">
        <div>
          <span class="footer-logo font-display">{client.nom}</span>
          <p class="footer-desc">{client.specialite}. {client.adresse}.</p>
          {socials.length > 0 && (
            <div class="social-links" style="margin-top:12px;">
              {socials.map(([k,v]) => (
                <a href={v} target="_blank" rel="noopener" class="social-link" title={k} set:html={socialIcons[k] || k} />
              ))}
            </div>
          )}
        </div>
        <div class="footer-nav">
          <a href="/">Accueil</a><a href="/#carte">La carte</a><a href="/galerie">Galerie</a>
          <a href="/a-propos">Notre histoire</a><a href="/#horaires">Horaires</a><a href="/mentions-legales">Mentions l√©gales</a>
        </div>
        <div>
          <h4>R√©servation</h4>
          <a href={client.telephoneLink} class="footer-phone">{client.telephone}</a>
          <a href={`mailto:${client.email}`}>{client.email}</a>
          <a href="https://vitemonsite-artisan.fr" target="_blank" rel="noopener" class="footer-badge">Site par <strong>LORN Digital Studio</strong></a>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2026 {client.nom} ‚Äî {client.ville}</p>
      </div>
    </div>
  </footer>

</Layout>


<!-- ‚ïê‚ïê‚ïê SCRIPTS ‚ïê‚ïê‚ïê -->
<script>
  // Menu tabs filter
  const tabs = document.querySelectorAll('.menu-tab');
  const items = document.querySelectorAll('.menu-card');
  tabs.forEach(btn => {
    btn.addEventListener('click', () => {
      tabs.forEach(t => t.classList.remove('active'));
      btn.classList.add('active');
      const cat = (btn as HTMLElement).dataset.cat;
      items.forEach(item => {
        const el = item as HTMLElement;
        if (cat === 'Tous' || el.dataset.cat === cat) { el.style.display = ''; el.style.animation = 'fadeSlideIn 0.4s ease forwards'; }
        else { el.style.display = 'none'; }
      });
    });
  });
</script>

<script define:vars={{ web3Key }}>
  const btn=document.getElementById('resaBtn'),form=document.getElementById('resaForm'),ok=document.getElementById('resaSuccess');
  btn?.addEventListener('click',async()=>{
    const nom=document.getElementById('rNom')?.value,tel=document.getElementById('rTel')?.value,
      date=document.getElementById('rDate')?.value,heure=document.getElementById('rHeure')?.value,
      pers=document.getElementById('rPers')?.value,occasion=document.getElementById('rOccasion')?.value,
      msg=document.getElementById('rMsg')?.value;
    if(!nom||!tel||!date||!heure||!pers){alert('Remplissez les champs obligatoires.');return;}
    btn.disabled=true;btn.textContent='Envoi...';
    if(web3Key){try{
      const r=await fetch('https://api.web3forms.com/submit',{method:'POST',headers:{'Content-Type':'application/json'},
        body:JSON.stringify({access_key:web3Key,subject:'üçΩÔ∏è R√©servation '+date+' '+heure+' ‚Äî '+nom,from_name:nom,telephone:tel,date,heure,personnes:pers,occasion,message:msg})});
      const d=await r.json();if(d.success&&form&&ok){form.style.display='none';ok.style.display='block';return;}
    }catch(e){}}
    window.location.href='mailto:lorn.digital.studio@gmail.com?subject='+encodeURIComponent('R√©servation '+date)+
      '&body='+encodeURIComponent('Nom: '+nom+'\nT√©l: '+tel+'\nDate: '+date+'\nHeure: '+heure+'\nPersonnes: '+pers+'\nOccasion: '+occasion+'\n\n'+msg);
  });
</script>


<!-- ‚ïê‚ïê‚ïê STYLES ‚ïê‚ïê‚ïê -->
<style>
  /* ‚ïê‚ïê‚ïê NAVBAR ‚ïê‚ïê‚ïê */
  .navbar{position:fixed;top:0;left:0;right:0;z-index:100;padding:10px clamp(0.75rem,3vw,2rem);transition:padding 0.4s;}
  .navbar.scrolled{padding-top:5px;padding-bottom:5px;}
  .nav-inner{max-width:1100px;margin:0 auto;padding:10px 18px;border-radius:14px;background:rgba(253,251,247,0.92);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);border:1px solid rgba(232,223,212,0.5);box-shadow:0 1px 3px rgba(62,44,35,0.03),0 8px 24px rgba(62,44,35,0.05);display:flex;align-items:center;justify-content:space-between;gap:8px;transition:all 0.4s;}
  .navbar.scrolled .nav-inner{padding:7px 14px;}
