  .hero-sub{display:block;font-size:14px;color:rgba(255,255,255,0.5);letter-spacing:0.2em;text-transform:uppercase;margin-bottom:16px;}
  .hero h1{font-size:clamp(3rem,8vw,5.5rem);font-weight:800;color:#FEFDF9;line-height:1;letter-spacing:-0.02em;}
