---
// ══════════════════════════════════════════════════════════════
// PAGE — GALERIE PHOTOS
// DÉSACTIVABLE : mv src/pages/galerie.astro src/pages-off/galerie.astro
// Puis retirer le lien "Galerie" de la navbar dans index.astro
// ══════════════════════════════════════════════════════════════
import Layout from '../layouts/Layout.astro';
import { client } from '../data/client';
const toutes = [...client.galerie, ...client.galerieBonus];
---

<Layout title={`Galerie — ${client.nom}`}>
  <div class="page-top"><div class="container" style="display:flex;justify-content:space-between;align-items:center;"><a href="/" class="back-link">← Retour</a><span class="font-display" style="font-weight:700;color:var(--wine);font-size:15px;">{client.nom}</span></div></div>

  <section class="section">
    <div class="container">
      <div style="text-align:center;margin-bottom:48px;">
        <span class="section-deco reveal">✦</span>
        <h1 class="section-title font-display reveal reveal-d1">Notre <em class="text-wine">univers</em></h1>
        <p class="sub reveal reveal-d2">Salle, terrasse, cuisine, assiettes — l'ambiance du Comptoir Catalan en images.</p>
      </div>

      <div class="gal-masonry">
        {toutes.map((g, i) => (
          <div class={`gal-item blur-sharp ${i % 4 === 0 ? 'gal-tall' : ''}`}>
            <div class="img-zoom"><img src={g.image} alt={g.alt} loading="lazy" /></div>
            <div class="gal-cap"><span>{g.alt}</span></div>
          </div>
        ))}
      </div>

      <div style="text-align:center;margin-top:48px;" class="reveal">
        <a href="/#reservation" class="btn-primary btn-lg">Réserver une table →</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-top{padding:100px 0 0;} .back-link{color:var(--wine);font-size:14px;font-weight:500;}
  .section-deco{display:block;font-size:14px;color:var(--gold-light);margin-bottom:8px;}
  .section-title{font-size:clamp(1.8rem,4vw,2.6rem);font-weight:800;color:var(--text);line-height:1.15;} .section-title em{font-style:italic;}
  .sub{font-size:15px;color:var(--text-muted);line-height:1.7;max-width:460px;margin:10px auto 0;font-style:italic;}
  .gal-masonry{columns:3;column-gap:10px;}
  .gal-item{break-inside:avoid;margin-bottom:10px;border-radius:14px;overflow:hidden;position:relative;cursor:pointer;}
  .gal-item img{width:100%;display:block;} .gal-tall img{min-height:360px;object-fit:cover;}
  .gal-cap{position:absolute;bottom:0;left:0;right:0;padding:12px 14px;background:linear-gradient(transparent,rgba(28,20,18,0.7));}
  .gal-cap span{font-size:13px;color:rgba(255,255,255,0.75);}
  .btn-primary{display:inline-flex;align-items:center;gap:8px;padding:15px 32px;border-radius:12px;background:var(--wine);color:#fff;font-weight:600;font-size:15px;border:none;cursor:pointer;transition:all 0.3s;} .btn-primary:hover{background:var(--wine-dark);transform:translateY(-2px);} .btn-lg{padding:18px 40px;font-size:16px;}
  @media(max-width:768px){.gal-masonry{columns:2;}}
  @media(max-width:480px){.gal-masonry{columns:1;}}
</style>
